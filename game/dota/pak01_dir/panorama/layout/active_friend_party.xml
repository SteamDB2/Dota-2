<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/active_friends.vcss_c" />
		<include src="s2r://panorama/styles/active_friend_party.vcss_c" />
	</styles>

	<DOTAActiveFriendParty>
		<Panel id="FriendInfoContainer" class="LeftRightFlow">
			<Panel id="AvatarRow" />
			<Panel id="StatusLabelContainer" hittest="false">
				<Label id="StatusLabel"/>
			</Panel>
		</Panel>
		<Panel id="InviteButtonContainer" hittest="false">
			<Button id="InviteOrMergeButton">
				<Label id="InviteLabel" text="#DOTA_Friend_Join_Party"/>
			</Button>
			<Panel id="PendingInvitesRadialSweepContainer" hittest="false">
				<Panel id="PendingInvitesRadialSweep" class="RadialSweep" hittest="false" />
			</Panel>
		</Panel>
		<Panel id="FindingMatchOverlay" hittest="false">
			<Panel id="FindingMatchScroll" hittest="false">
				<Label text="#DOTA_Friend_Finding_Match"/>
			</Panel>
		</Panel>
		
		
	</DOTAActiveFriendParty>

</root>
