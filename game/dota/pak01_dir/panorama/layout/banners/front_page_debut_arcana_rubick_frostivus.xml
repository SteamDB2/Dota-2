<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/frontpage_shared.vcss_c" />
		<include src="s2r://panorama/styles/banners/front_page_debut_arcana_rubick_frostivus.vcss_c" />
	</styles>

	<CustomLayoutPanel class="ArcanaFrostivusCell">
		<Panel class="Frosted_edges" />
		<Panel id="TempFrostivus2018Background" tabindex="auto" />
		<DOTAScenePanel id="ModelScene" map="scenes/events/frostivus2018/parallax_eventhome_as" light="hero_light" renderdeferred="false" deferredalpha="true" particleonly="false" camera="dashboard_camera" rotateonmousemove="true" yawmin="-2" yawmax="2" pitchmin="-2" pitchmax="2" hittest="false" articleonly="false" />
		
		<Panel id="Header">
			<Panel class="FrostivusTitle">
				<Label class="Subtitle" text="#DOTA_RubickArcana_Subtitle_2" />
				<Panel id="FrostivusTitleImage" />
				<Label class="Subtitle_update" text="#DOTA_RubickArcana_Subtitle_3" />
			</Panel>
		</Panel>
		
		<Label class="Subtitle Update_Description" text="#DOTA_RubickArcana_Subtitle_1" />
		
		<Panel id="Footer">
			<Panel class="FooterButtonContainer">
				<Panel class="CellButton">
					<TextButton id="PurchaseArcana" class="ActionButton" text="#DOTA_PurchaseArcana_Rubick" onactivate="DOTAShowRubickArcanaPage()" />
				</Panel>
			</Panel>
			<Panel class="FooterButtonContainer">
				<Panel class="CellButton">
					<TextButton id="PlayFrostivus" class="ActionButton" text="#DOTA_Frostivus2018_Play" onactivate="DOTAShowFrostivus2018Page()" />
				</Panel>
			</Panel>
		</Panel>
	</CustomLayoutPanel>
</root>
