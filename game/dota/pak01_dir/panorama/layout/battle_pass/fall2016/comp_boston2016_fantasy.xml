							<Panel class="HorizontalLineFill"/>
							<Label id="stat2" class="Stat" text="{s:stat2}"/>
						</Panel>
						<Panel class="FantasyStatsLine LeftRightFlow">
							<Label text="#DOTA_PlayerCardBonusStatName3"/>
