				<Label class="ChatWheelMessageAll" text="#dota_all_chat_label" />
				<Label text="{s:chat_wheel_message}" />
			</Panel>
		</snippet>

		<snippet name="ChatWheelReward">
			<Panel class="ChatWheelReward">
