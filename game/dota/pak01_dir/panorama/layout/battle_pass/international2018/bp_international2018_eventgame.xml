<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_shared.vcss_c" />
		<include src="s2r://panorama/styles/compendiums/compendium_styles.vcss_c" />
		<include src="s2r://panorama/styles/battle_pass/international2018/bp_international2018_shared.vcss_c" />
		<include src="s2r://panorama/styles/battle_pass/international2018/bp_international2018_eventgame.vcss_c" />
	</styles>

	<DOTABPInternational2018EventGamePage class="DashboardPage BattlePassPage" play-button="disable">
		<Panel id="CompendiumBody" class="CompendiumBody">
			<Panel id="MainContents">
				<Panel id="LeftColumn">
				</Panel>

				<Panel id="CenterColumn" class="CenterColumn CenterAlign TopBottomFlow">

					<Label id="EventGameTitle" text="#DOTA_TI8_EventGame_Title" class="EventGameTitle" html="true"/>

					<Label id="EventGameDescription" text="#DOTA_TI8_EventGame_Description" class="EventGameDescription" html="true"/>

					<Panel id="Filler" class="FillHeight"/>

					<Panel id="Points" class="TopBottomFlow">
						<Panel id="PointsEarnedSection" class="LeftRightFlow">
							<Label id="BattlePointsEarnedDesc" text="#DOTA_TI8_EventGame_BP_Earned"/>
							<Label id="BattlePointsEarnedValue" text="#DOTA_TI8_EventGame_BP_EarnedValue"/>
						</Panel>

						<Panel id="PointMultiplierSection" class="LeftRightFlow">
							<Label id="BattlePointsMultiplierDesc" text="#DOTA_TI8_EventGame_BP_PointMultiplier"/>
							<Label id="BattlePointsMultiplierValue" text="#DOTA_TI8_EventGame_BP_PointMultiplierValue"/>
						</Panel>

						<Label id="ResetTimer" text="DOTA_TI8_EventGame_RefreshTime" />

					</Panel>

					<Panel id="PlayGame" class="BottomAlign">
						<Panel id="StartMatchContainer" class="TopBottomFlow">
							<TextButton id="StartMatchButton" class="PlayButton" text="#DOTA_TI8_EventGame_PlayButton" onactivate="DOTAStartFindingEventGameMatch()"/>
							<Label id="FindingMatchLabel" text="Finding Match..."/>
						</Panel>
					</Panel>
				</Panel>

			</Panel>
		</Panel>
	</DOTABPInternational2018EventGamePage>
</root>
