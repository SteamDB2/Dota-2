<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/context_menus/context_menu_econ_item.vcss_c" />
	</styles>

	<Panel class="EconItemMenuContents">

		<DOTAEconItemContextUIHeader id="Header" />

		<Panel id="MenuCategories">
			<Panel id="InspectCategory" class="MenuCategory">
				<TextButton id="InspectButton" disabled="true" />
				<TextButton id="ViewInLoadoutButton" disabled="true" />
				<TextButton id="ViewInArmoryButton" text="#DOTA_ViewInArmory" disabled="true" />
			</Panel>

			<Panel id="ToolCategory" class="MenuCategory">
				<TextButton id="ConsumeToolButton" disabled="true" />
			</Panel>

			<Panel id="EquipCategory" class="MenuCategory">
				<TextButton id="ToggleEquipButton" disabled="true" />
				<TextButton id="ToggleSlotShuffleButton" disabled="true" />
			</Panel>

			<Panel id="SetCategory" class="MenuCategory">
				<TextButton id="PreviewSetButton" text="#DOTA_Armory_ContextMenu_PreviewSet" disabled="true" />
				<TextButton id="EquipSetButton" text="#DOTA_Armory_ContextMenu_EquipSet" disabled="true" />
			</Panel>

			<Panel id="EffigyCategory" class="MenuCategory">
				<TextButton id="EffigyPoseButton" text="#DOTA_Armory_ContextMenu_EffigyPose" disabled="true" />
				<TextButton id="EffigyReforgeButton" text="#DOTA_Armory_ContextMenu_EffigyReforge" disabled="true" />
			</Panel>

			<Panel id="GiftCategory" class="MenuCategory">
				<TextButton id="GiftItemButton" text="#DOTA_Armory_ContextMenu_GiftWrap" disabled="true" />
			</Panel>

			<Panel id="ArmoryCategory" class="MenuCategory">
				<TextButton id="ArmoryTagsButton" text="#DOTA_Armory_ContextMenu_Tags" disabled="true" />
				<TextButton id="AddToCollectionButton" text="#DOTA_Armory_ContextMenu_AddToCollection" disabled="true" />
				<TextButton id="RemoveFromCollectionButton" text="#DOTA_Armory_ContextMenu_RemoveFromCollection" disabled="true" />
			</Panel>

			<Panel id="PurgatoryCategory" class="MenuCategory">
				<TextButton id="FinalizePurchaseButton" text="#Econ_Purgatory_FinalizePurchase" disabled="true" />
				<TextButton id="FinalizeAllItemsButton" text="#Econ_Purgatory_FinalizeAllItems" disabled="true" />
				<TextButton id="ReturnItemButton" text="#Econ_Purgatory_ReturnItem" disabled="true" />
			</Panel>

			<Panel id="DeleteCategory" class="MenuCategory">
				<Panel id="RecycleButtons" class="DynamicMenuOptions" />
				<TextButton id="DeleteButton" text="#DOTA_Armory_ContextMenu_Delete" disabled="true" />
			</Panel>
			
		</Panel>

	</Panel>
</root>
