<root>
  <styles>
    <include src="s2r://panorama/styles/dotastyles.vcss_c" />
    <include src="s2r://panorama/styles/context_menus/context_menu_econ_item_style.vcss_c" />
  </styles>

  	<snippets>
		<snippet name="StyleEntry">
			<Panel class="StyleEntry">
				<Panel class="StyleEntryIcon" />
				<Panel class="StyleLabels">
					<Label class="StyleName" text="{s:style_name}"/>
					<Label class="StyleUnlock" text="{s:style_unlock}"/>
					<Label class="AutoStyleReason" text="#DOTA_econ_item_details_autostyle_reason"/>
				</Panel>
			</Panel>
		</snippet>
	</snippets>

	<DOTAContextMenuEconItemStyle class="EconItemStyleContents">
		<Panel id="Header">
			<Label id="StylesTitle" class="Title" text="#DOTA_econ_item_details_styles_header"/>
			<Label id="DynamicStylesTitle" class="Title" text="#DOTA_econ_item_details_dynamic_styles" />
			<Panel class="FillWidth" />
			<TextButton id="UnlockAllStylesButton" text="#DOTA_StyleUnlock_UnlockAll" onactivate="DOTAEconItemUnlockAllStyles()" />
			<Panel id="DynamicStylesInfoIcon" class="InfoIcon" onmouseover="UIShowTextTooltip( #DOTA_econ_item_details_dynamic_styles_help )" onmouseout="UIHideTextTooltip()" />
		</Panel>
		<Panel id="StylesList" >
			<!-- StyleEntry RadioButton snippets added via code -->
		</Panel>
  </DOTAContextMenuEconItemStyle>
</root>
