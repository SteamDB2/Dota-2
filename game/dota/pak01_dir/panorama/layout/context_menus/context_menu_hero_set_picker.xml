<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/context_menus/context_menu_hero_set_picker.vcss_c" />
	</styles>

	<Panel class="ContextMenuHeroSetPicker" acceptsfocus="true">
		<Panel id="Header">
			<Label id="Instructions" text="#DOTA_HeroLoadout_Instructions" />
			<Panel class="FillWidth" />
			<ToggleButton id="ShuffleButton" onmouseover="UIShowTextTooltip( #DOTA_HeroSetShuffle_Info )" onmouseout="UIHideTextTooltip()">
				<Label id="ShuffleEnabledLabel" text="#DOTA_HeroSetShuffle_Enabled" />
				<Label id="ShuffleDisabledLabel" text="#DOTA_HeroSetShuffle_Disabled" />
			</ToggleButton>
		</Panel>
		<Carousel id="SetsCarousel" panels-visible="3" />
		<Panel id="Footer">
			<CarouselNav id="SetCarouselNav" carouselid="SetsCarousel" class="FullWidthCarouselNav" />
		</Panel>
	</Panel>
</root>
