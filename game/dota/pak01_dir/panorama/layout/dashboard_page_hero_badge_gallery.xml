<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_shared.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_hero_badge_gallery.vcss_c" />
	</styles>

	<DOTAHeroBadgeGalleryPage class="DashboardPage SafeDashboardPage">

		<Label class="BadgeGalleryCategory" text="Tiny" />
		<Panel id="TinyBadges" class="BadgeList">
			<Panel class="PlusHeroBadgeIconTiny BronzeTier" />
			<Panel class="PlusHeroBadgeIconTiny SilverTier" />
			<Panel class="PlusHeroBadgeIconTiny GoldTier" />
			<Panel class="PlusHeroBadgeIconTiny PlatinumTier" />
			<Panel class="PlusHeroBadgeIconTiny MasterTier" />
		</Panel>

		<Label class="BadgeGalleryCategory" text="Small" />
		<Panel id="SmallBadges" class="BadgeList">
			<Panel class="PlusHeroBadgeIconSmall BronzeTier" />
			<Panel class="PlusHeroBadgeIconSmall SilverTier" />
			<Panel class="PlusHeroBadgeIconSmall GoldTier" />
			<Panel class="PlusHeroBadgeIconSmall PlatinumTier" />
			<Panel class="PlusHeroBadgeIconSmall MasterTier" />
		</Panel>

		<Label class="BadgeGalleryCategory" text="Full" />
		<Panel id="FullBadges" class="BadgeList">
			<Panel class="PlusHeroBadgeIcon BronzeTier" />
			<Panel class="PlusHeroBadgeIcon SilverTier" />
			<Panel class="PlusHeroBadgeIcon GoldTier" />
			<Panel class="PlusHeroBadgeIcon PlatinumTier" />
			<Panel class="PlusHeroBadgeIcon MasterTier" />
		</Panel>

		<Label class="BadgeGalleryCategory" text="With Level" />
		<Panel id="LevelBadges" class="BadgeList">
			<DOTAHeroBadge badgestyle="level" herolevel="1" />
			<DOTAHeroBadge badgestyle="level" herolevel="6" />
			<DOTAHeroBadge badgestyle="level" herolevel="12" />
			<DOTAHeroBadge badgestyle="level" herolevel="18" />
			<DOTAHeroBadge badgestyle="level" herolevel="25" />
		</Panel>

	</DOTAHeroBadgeGalleryPage>
</root>