<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_shared.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_hero_relics_debug.vcss_c" />
	</styles>

	<snippets>
		
		<snippet name="HeroSection" >
			<Panel class="HeroSectionOuter">  
				<Label class="HeroRelicHeader" text="{g:dota_hero_name:hero_id} - {d:relic_count} Relics ({d:hero_semi_specific_relic_count} Semi Specific / {d:hero_specific_relic_count} Hero Specific)" />
				<Panel id="RelicList" />
				<Label class="AvailableRelicHeader" text="Available: {d:available_relic_count} ({d:available_hero_semi_specific_relic_count} Semi Specific / {d:available_hero_specific_relic_count} Hero Specific)" />
				<Panel id="AvailableRelicList" />
			</Panel>
		</snippet>
							 
		<snippet name="HeroRelic">
			<Panel class="HeroRelic">
				<DOTAHeroRelicImage id="RelicImage" class="Small" />
				<Label class="HeroRelicName" text="{g:dota_gem_name:relic_type_id}" />
				<Panel class="IdContainer">
					<Label class="HeroRelicType MonoNumbersFont" text=" #{d:relic_type_id} " />
					<Panel class="PublicIcon" />
				</Panel>
			</Panel>
		</snippet>
		
	</snippets>
	
	<DOTAHeroRelicsDebugPage class="DashboardPage SafeDashboardPage TopBottomFlow">

		<Panel class="Header">
			<Button class="ButtonBevel" onactivate="DOTAHeroRelicsDebugSwitchMode();" >
				<Label class="HeroRelicHeader" text="Cycle Show Only Semi / Hero-Specific" />
			</Button>
			<Panel class="ModeDisplay" >
				<Label class="Generic" text="Showing All" />
				<Label class="SemiSpecific" text="Showing Semi-Specific" />
				<Label class="HeroSpecific" text="Showing Hero-Specific" />
			</Panel>
		</Panel>
		
		<Panel id="HeroRelics">
			
		</Panel>

	</DOTAHeroRelicsDebugPage>
</root>