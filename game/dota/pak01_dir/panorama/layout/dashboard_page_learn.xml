<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_shared.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_learn_shared.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_learn.vcss_c" />
	</styles>

	<Panel class="DashboardPage LearnPage">

		<Panel class="MainContents">
			<Panel class="LearnSectionsColumn">
				<Panel id="TutorialSection" class="LearnSection" onactivate="DOTAShowNewPlayerHomePage()">
					<Panel class="LearnSectionImage" />
					<Panel class="LearnSectionOverlay" />
					<Panel class="LearnSectionDetails">
						<Label class="LearnSectionDescription" text="Learn the basics of playing Dota." />
						<Label class="LearnSectionTitle" text="Introduction" />
					</Panel>
				</Panel>

				<Panel id="TrainingSection" class="LearnSection" onactivate="DOTAShowLastHitTrainerPage()">
					<Panel class="LearnSectionImage" />
					<Panel class="LearnSectionOverlay" />
					<Panel class="LearnSectionDetails">
						<Label class="LearnSectionDescription" text="Hone your skills..." />
						<Label class="LearnSectionTitle" text="Training" />
					</Panel>
				</Panel>
			</Panel>

			<Panel class="LearnSectionsColumn">
				<Panel id="GlossarySection" class="LearnSection" onactivate="DOTAShowGlossaryPage()">
					<Panel class="LearnSectionImage" />
					<Panel class="LearnSectionOverlay" />
					<Panel class="LearnSectionDetails">
						<Label class="LearnSectionDescription" text="Learn about the deep mechanics." />
						<Label class="LearnSectionTitle" text="Tome of Knowledge" />
					</Panel>
				</Panel>

				<Panel id="PatchesSection" class="LearnSection" onactivate="DOTAShowPatchesPage()">
					<Panel class="LearnSectionImage" />
					<Panel class="LearnSectionOverlay" />
					<Panel class="LearnSectionDetails">
						<Label class="LearnSectionDescription" text="Dota is ever evolving." />
						<Label class="LearnSectionTitle" text="Gameplay Updates" />
					</Panel>
				</Panel>
			</Panel>
		</Panel>

	</Panel>
</root>
