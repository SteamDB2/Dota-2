<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_shared.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_profile.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_profile_heroes.vcss_c" />
	</styles>

	<Panel class="DOTAProfileHeroPage DashboardPage">
		<Panel id="ProfileContainer" class="ProfileTopLevel">
			<Panel id="Background" />
			<Panel id="CarouselOfHeroes" hittest="false"/>
			<Panel id="ProfileInteractable"  hittest="false">
				<Panel class="LeftRightFlow" id="Header">
					<DOTAUserName id="PlayerName" />
					<DropDown id="HeroListTypeDropdown">
						<Label id="FavoriteHeroes" text="Favorite Heroes" />
						<Label id="MostPlayed" text="Played Most Often" />
					</DropDown>
				</Panel>
				<Panel id="Stats">
					<Panel class="HorizontalLine" />
					<Label text="2700" class="Stat" id="MMRStat"/>

					<Panel class="LeftRightFlow">
						<Label text="Hero MMR" class="StatLabel" />
						<Image class="QuestionIcon" src="s2r://panorama/images/icon_mmr_small_png.vtex" />
					</Panel>

					<Label text="107" class="Stat" />
					<Label text="Ranked Matches" class="StatLabel" />
					<Label text="62.2%" class="Stat" />
					<Label text="Win Rate" class="StatLabel" />
					<Label text="2.10" class="Stat" />
					<Label text="KDA" class="StatLabel" />
					<Label text="202" class="Stat" />
					<Label text="GPM" class="StatLabel" />
					<Label text="320" class="Stat" />
					<Label text="XPPM" class="StatLabel" />
				</Panel>
				<Panel id="SelectionButtons">


					<Button id="PrevButton" onactivate="DOTAProfileHeroPrev();">
						<Image class="SmallArrow" src="s2r://panorama/images/control_icons/arrow_solid_left_png.vtex" />
						<Label text="Prev" />
					</Button>
					<Button id="NextButton" class="LeftRightFlow" onactivate="DOTAProfileHeroNext();">
						<Label text="Next" />
						<Image class="SmallArrow" src="s2r://panorama/images/control_icons/arrow_solid_right_png.vtex" />
					</Button>
				</Panel>
			</Panel>

		</Panel>
	</Panel>
</root>
