<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_shared.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_tutorial.vcss_c" />
	</styles>

	<DOTATutorial class="TutorialPage" hittest="false">
		<Panel class="TutorialTopButtonsContainer" >
			<Button id="SkipTutorial" onactivate="DOTASkipTutorial()" >
			<Label class="SkipTutorialText" text="#DOTA_Tutorial_SkipButton" />
			</Button>
			<Button id="DOTASettingsButton" class="SettingsButton" onactivate="DOTAShowSettingsPopup();" />
			<Button id="DOTAQuitButton" class="TopBarSmallButton" onactivate="DOTAQuit();" />
		</Panel>

		<Image id="DotaLogo" src="s2r://panorama/images/dota_logo_and_text_png.vtex" />

		<Panel id="NavContainer" class="TutorialMainNavContainer" >
			<Panel id="0" class="TutorialQuest">
				<Button id="Button0" class="QuestButton">
					<Image class="NavMenuImage" src="s2r://panorama/images/global_mainnav_couriers_png.vtex" scaling="stretch-to-cover-preserve-aspect"/>
					<Panel class="QuestFlow">
						<Panel class="QuestLabel">
							<Label class="QuestTitle" text="#DOTA_Tutorial_Quest0_Title" />
							<Label class="QuestTitleDesc" text="#DOTA_Tutorial_Quest0_TitleDesc" />
						</Panel>
            <Button class="QuestStart" onactivate="DOTAStartQuest()" >
							<Label class="QuestStartText" text="#DOTA_Tutorial_Start_Quest"/>
						</Button>
					</Panel>
					<Image class="QuestCompletionCheckmark" src="s2r://panorama/images/control_icons/check_64_png.vtex" />
				</Button>
				<Panel class="QuestDetails">
					<Label class="QuestDetailsDesc" text="#DOTA_Tutorial_Quest0DetailsDesc" />
					<Label class="QuestDetailsLearn" text="#DOTA_Tutorial_QuestDetailsLearn" />
					<Label class="QuestDetailsLesson" text="#DOTA_Tutorial_Quest0DetailsLesson" />
				</Panel>
			</Panel>
			<Panel id="1" class="TutorialQuest">
				<Button id="Button1" class="QuestButton">
					<Image class="NavMenuImage" src="s2r://panorama/images/global_mainnav_world_png.vtex" scaling="stretch-to-cover-preserve-aspect"/>
					<Panel class="QuestFlow">
						<Panel class="QuestLabel">
							<Label class="QuestTitle" text="#DOTA_Tutorial_Quest1_Title" />
							<Label class="QuestTitleDesc" text="#DOTA_Tutorial_Quest1_TitleDesc" />
						</Panel>
            <Button class="QuestStart" onactivate="DOTAStartQuest()" >
							<Label class="QuestStartText" text="#DOTA_Tutorial_Start_Quest"/>
						</Button>
					</Panel>
					<Image class="QuestCompletionCheckmark" src="s2r://panorama/images/control_icons/check_64_png.vtex" />
				</Button>
				<Panel class="QuestDetails">
					<Label class="QuestDetailsDesc" text="#DOTA_Tutorial_Quest1DetailsDesc" />
					<Label class="QuestDetailsLearn" text="#DOTA_Tutorial_QuestDetailsLearn" />
					<Label class="QuestDetailsLesson" text="#DOTA_Tutorial_Quest1DetailsLesson" />
				</Panel>
			</Panel>
			<Panel id="2" class="TutorialQuest">
				<Button id="Button2" class="QuestButton Locked">
					<Image class="NavMenuImage Locked" src="s2r://panorama/images/global_mainnav_interface_png.vtex" scaling="stretch-to-cover-preserve-aspect"/>
					<Panel class="QuestFlow">
						<Panel class="QuestLabel">
							<Label class="QuestTitle" text="#DOTA_Tutorial_Quest2_Title" />
							<Label class="QuestTitleDesc" text="#DOTA_Tutorial_Quest2_TitleDesc" />
						</Panel>
            <Button class="QuestStart" onactivate="DOTAStartQuest()" >
							<Label class="QuestStartText" text="#DOTA_Tutorial_Start_Quest"/>
						</Button>
					</Panel>
					<Image class="QuestCompletionCheckmark" src="s2r://panorama/images/control_icons/check_64_png.vtex" />
				</Button>
				<Panel class="QuestDetails">
					<Label class="QuestDetailsDesc" text="#DOTA_Tutorial_Quest2DetailsDesc" />
					<Label class="QuestDetailsLearn" text="#DOTA_Tutorial_QuestDetailsLearn" />
					<Label class="QuestDetailsLesson" text="#DOTA_Tutorial_Quest2DetailsLesson" />
				</Panel>
			</Panel>
		</Panel>	<!-- NavContainer -->

		<DOTAScenePanel id="HeroModel" hittest="false" particleonly="false"/>		<!-- Filled in dynamically -->

	</DOTATutorial>
</root>
