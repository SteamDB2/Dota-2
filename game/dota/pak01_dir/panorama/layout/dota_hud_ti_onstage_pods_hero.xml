<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hudstyles.vcss_c" />
		<include src="s2r://panorama/styles/dota_hud_ti_onstage_pods.vcss_c" />
	</styles>

	<DOTATIOnstagePodsHero>
        <DOTAScenePanel id="HeroScene" map="" camera="camera_1" hittest="false" antialias="true" particleonly="false"/>

        <MoviePanel id="BGMovie"/>
        <Image id="PlayerImage" scaling="stretch-to-cover-preserve-aspect"/>
        <Panel id="PlayerColor" />
	<Label class="PlayerName" text="{s:player_name}" />
        <Label class="PodID" text="{s:pod_id}" />

        <Panel id="TIWinner">
          <Image id="TIWinAegis" scaling="stretch-to-fit-preserve-aspect" src="s2r://panorama/images/onstage_pods/aegis_shield_psd.vtex" /> />
          <Label class="TIWinYear" text="{d:r:ti_win_year}"/>
        </Panel>

        <Image class="RespawnBG" src="s2r://panorama/images/onstage_pods/timerbg_pod_png.vtex" />
        <Label class="RespawnTime" text="{d:respawn_seconds}" />

        <!-- aegis -->
        <Image id="HasAegis" scaling="stretch-to-fit-preserve-aspect" src="s2r://panorama/images/onstage_pods/aegis_png.vtex" /> /> 
        <Label id="AegisCountdown" text="{s:aegis_time}" />

        <!-- rapier + count -->
        <Image id="Rapier" scaling="stretch-to-fit-preserve-aspect" src="s2r://panorama/images/onstage_pods/rapier_pods_png.vtex" /> />
        <Label id="RapierCount" text="x {d:num_rapiers}" />

        <!-- buyback -->
        <Image id="HasBuyback" scaling="stretch-to-fit-preserve-aspect" src="s2r://panorama/images/onstage_pods/buyback_png.vtex" /> />

        <!---level up -->
        <Panel class="LevelUpBlock">
            <Image class="LevelUpIcon" scaling="stretch-to-fit-preserve-aspect" src="s2r://panorama/images/onstage_pods/uparrow_png.vtex" />
            <Label class="LevelUpLabel" text="Level {d:level_up}" />
        </Panel>

        <!-- item pickup -->
        <Panel class="ItemPickupBlock">
            <DOTAItemImage id="ItemPickupImage" />
        </Panel>
        
        <!-- buyback used -->
        <Panel class="BuybackUsedBlock">
            <Image class="BuybackUsedBG" scaling="stretch-to-fit-preserve-aspect" src="s2r://panorama/images/onstage_pods/glow_png.vtex" /> />
            <Image class="BuybackUsedIcon" scaling="stretch-to-fit-preserve-aspect" src="s2r://panorama/images/onstage_pods/buyback_noglow_png.vtex" /> />
        </Panel>

        

	</DOTATIOnstagePodsHero>
</root>


