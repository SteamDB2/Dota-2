<root>

	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hero_stat_icons.vcss_c" />
		<include src="s2r://panorama/styles/dota_ui_creep_card.vcss_c" />
	</styles>

	<snippets>
		<snippet name="AbilityButton">
			<Panel class="AbilityButton">
				<DOTAAbilityImage id="AbilityButtonImage" class="AbilityImage"/>
				<Panel hittest="false" class="AbilityBevel"/>
			</Panel>
		</snippet>
	</snippets>


	<Panel class="ContentsRoot">

		<!-- label text gets updated in code to handle optional unit count -->
		<Label id="UnitLabel" class="UnitLabel" text="#DOTA_UI_CreepCard_UnitName"/>

		<Panel class="ContentsPanel">

			<Panel class="StatsAndAbilities">

				<Panel id="StatsContainer">

					<Panel id="UnitScenePanels" class="LeftRightFlow">
						<DOTAScenePanel id="UnitScenePanel1" class="UnitScenePanel" camera="default_camera" />
						<DOTAScenePanel id="UnitScenePanel2" class="UnitScenePanel" camera="default_camera" />
						<DOTAScenePanel id="UnitScenePanel3" class="UnitScenePanel" camera="default_camera" />
					</Panel>

					<Panel id="PrimaryStatsContainer" class="TopBottomFlow">
						<Panel id="HealthRow" class="StatRow">
							<Label id="HealthLabel" text="#DOTA_HUD_MaxHealthLabel" class="StatName"/>
							<Panel class="LeftRightFlow">
								<Label id="Health" text="{d:max_health}" class="BaseValue"/>
							</Panel>
						</Panel>
						<Panel id="ManaRow" class="StatRow">
							<Label id="ManaLabel" text="#DOTA_HUD_MaxManaLabel" class="StatName"/>
							<Panel class="LeftRightFlow">
								<Label id="Mana" text="{d:max_mana}" class="BaseValue"/>
							</Panel>
						</Panel>

						<Panel id="HealthRegenRow" class="StatRow">
							<Label id="HealthRegenLabel" text="#DOTA_HUD_HealthRegenDetail" class="StatName"/>
							<Panel class="LeftRightFlow">
								<Label id="HealthRegen" text="{s:health_regen}" class="BaseValue"/>
							</Panel>
						</Panel>
						<Panel id="ManaRegenRow" class="StatRow">
							<Label id="ManaRegenLabel" text="#DOTA_HUD_ManaRegenDetail" class="StatName"/>
							<Panel class="LeftRightFlow">
								<Label id="ManaRegen" text="{s:mana_regen}" class="BaseValue"/>
							</Panel>
						</Panel>

						<!--<Label id="MiscHeader" text="#DOTA_Glossary_Misc"/>-->
						<Panel id="GoldBountyRow" class="StatRow">
							<Label id="GoldBountyLabel" text="#DOTA_Glossary_GoldBounty" class="StatName"/>
							<Panel class="LeftRightFlow">
								<Label id="GoldBountyMultiple" text="{d:gold_bounty_min} - {d:gold_bounty_max}" class="GoldBountyMultiple BaseValue"/>
								<Label id="GoldBountySingle" text="{d:gold_bounty_min}" class="GoldBountySingle BaseValue"/>
							</Panel>
						</Panel>
						<Panel id="XPBountyRow" class="StatRow">
							<Label id="XPBountyLabel" text="#DOTA_Glossary_XPBounty" class="StatName"/>
							<Panel class="LeftRightFlow">
								<Label id="XPBounty" text="{d:xp_bounty}" class="BaseValue"/>
							</Panel>
						</Panel>
					</Panel>

					<Panel id="SecondaryStatsContainer" class="TopBottomFlow">
						<Panel id="AttackSpeedRow" class="StatRow">
							<Label id="AttackSpeedLabel" text="#DOTA_HUD_AttackSpeed" class="StatName"/>
							<Panel class="LeftRightFlow">
								<Label id="AttacksPerSecond" text="{s:attack_rate}" />
							</Panel>		
						</Panel>
						<Panel id="DamageRow" class="StatRow">
							<Label id="DamageLabel" text="#DOTA_HUD_Damage" class="StatName"/>
							<Panel class="LeftRightFlow">
								<Label id="DamageMultiple" text="{d:damage_min} - {d:damage_max}" class="DamageMultiple BaseValue"/>
								<Label id="DamageSingle" text="{d:damage_min}" class="DamageSingle BaseValue"/>
							</Panel>				
						</Panel>
						<Panel id="AttackRangeRow" class="StatRow">
							<Label id="RangeLabel" text="#DOTA_HUD_AttackRange" class="StatName"/>
							<Panel class="LeftRightFlow">
								<Label id="Range" text="{d:attack_range}" class="BaseValue"/>
							</Panel>
						</Panel>
						<Panel id="MoveSpeedRow" class="StatRow">
							<Label id="MoveSpeedLabel" text="#DOTA_HUD_MoveSpeed" class="StatName"/>
							<Panel class="LeftRightFlow">
								<Label id="MoveSpeed" text="{d:movement_speed}" class="BaseValue"/>
							</Panel>
						</Panel>
					<!--
					<Panel id="SpellAmpRow" class="StatRow">
						<Label id="SpellAmpLabel" text="#DOTA_HUD_SpellAmp" class="StatName"/>
						<Panel class="LeftRightFlow">
							<Label id="SpellAmp" text="{s:base_spell_amp}%" class="BaseValue"/>
							<Label id="SpellAmpBonus" text="{s:bonus_spell_amp}%" class="BonusValue"/>
						</Panel>
					</Panel>-->	

					<Panel id="ArmorRow" class="StatRow">
						<Label id="ArmorLabel" text="#DOTA_HUD_Armor" class="StatName"/>
						<Panel class="LeftRightFlow">
							<Label id="Armor" text="{s:armor}" class="BaseValue"/>
						</Panel>
					</Panel>
					<Panel id="MagicResistRow" class="StatRow">
						<Label id="MagicResistLabel" text="#DOTA_HUD_MagicResist" class="StatName"/>
						<Panel class="LeftRightFlow">
							<Label id="MagicResist=" text="{d:magic_resistance}%" class="BaseValue"/>
						</Panel>
					</Panel>
				</Panel>

			</Panel>


			<Panel class="AbilitiesContainer">
				<Label class="AbilitiesLabel" text="Abilities"/>
				<Panel id="UnitAbilities">
					<!-- Added dynamically -->
					<!-- <Panel class="AbilityIcon -abilityname-" onmouseover="DOTAShowAbilityTooltip( -abilityname- )" onmouseout="DOTAHideAbilityTooltip()" /> -->
				</Panel>
			</Panel>

		</Panel>


	</Panel>

	

</Panel>

</root>
