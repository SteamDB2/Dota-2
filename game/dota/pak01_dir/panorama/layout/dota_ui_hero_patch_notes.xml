<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dota_ui_hero_patch_notes.vcss_c" />
	</styles>

	<snippets>

		<snippet name="VersionedNote" >
			<Panel class="VersionedNoteContainer" >
				<Panel class="Indent" />
				<Panel class="Dot" />
				<Label class="NoteLine NoInfo" text="#DOTA_PatchNotes_HeroPatchNote" html="true" />
				<Label class="NoteLine Info" text="#DOTA_PatchNotes_HeroPatchNote_WithInfo" html="true" />
			</Panel>
		</snippet>
											  
		<snippet name="AbilityNotes">
			<Panel class="AbilityNotes">
				<DOTAAbilityImage id="AbilityImage" />
				<Panel class="NotesContents">
					<Label class="AbilityName" text="{s:ability_name}"/>
					<Panel id="AbilityNotesContainer">
						<!-- dynamic -->
					</Panel>
				</Panel>
			</Panel>
		</snippet>
		
	</snippets>

	<DOTAUIHeroPatchNotes>

		<Panel class="HeroNotesTop">
			<DOTAHeroImage id="HeroImage" heroimagestyle="portrait" scaling="stretch-to-fit-x-preserve-aspect" />
			<Panel class="NotesContents" >
				<Label class="AbilityName" text="{g:dota_hero_name:hero_id}"/>
				<Panel id="HeroNotesContainer">
					<!-- dynamic -->
				</Panel>
			</Panel>
		</Panel>

		<Panel id="AbilityNotesContainer">
			<!-- dynamic -->
		</Panel>

		<Panel class="TalentNotes">
			<Panel class="TalentTreeImage" />
			<Panel class="NotesContents">
				<Label class="TalentsName" text="#DOTA_AbilityBuild_Talent_Title" />
				<Panel id="TalentNotesContainer">
					<!-- dynamic -->
				</Panel>
			</Panel>
		</Panel>

	</DOTAUIHeroPatchNotes>
</root>
