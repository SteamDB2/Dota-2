<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/econ_item_context_ui_header.vcss_c" />
	</styles>

	<DOTAEconItemContextUIHeader class="ItemRarityBackgroundColor">
		<Panel id="HeaderTitle">
			<Label id="Name" text="#DOTA_tooltip_econ_item_name" />
			<Label id="Set" html="true" text="#DOTA_tooltip_econ_item_set" />
		</Panel>
		<Panel id="RarityStripe"/>
		<Panel id="Banner" >
			<Image class="SeasonalIcon"/>
			<DOTAHeroImage id="HeroIcon"/>
			<Panel id="BannerText">
				<Panel class="LeftRightFlow">
					<Label text="#DOTA_tooltip_econ_item_rarity_label" />
					<Label id="Rarity" class="ItemRarityColor" text="#DOTA_tooltip_econ_item_rarity" />
				</Panel>
				<Label id="Slot" text="#DOTA_tooltip_econ_item_slot" />
			</Panel>
		</Panel>
	</DOTAEconItemContextUIHeader>
</root>
