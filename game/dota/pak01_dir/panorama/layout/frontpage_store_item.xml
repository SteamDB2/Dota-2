<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/frontpage_shared.vcss_c" />
		<include src="s2r://panorama/styles/frontpage_store_item.vcss_c" />
	</styles>

	<DOTAFrontpageStoreItem>
		<EconItemImage id="ItemImage" class="FrontpageCellImage" scaling="stretch-to-cover-preserve-aspect" />
		<Panel id="Header">
			<Panel id="HeaderTopRow">
				<Label class="FrontpageCellHeader" text="{s:cell_header}" />
				<Label id="SaleEnds" class="FrontpageCellHeader"  text="#DOTA_Store_SpotlightDuration" />
			</Panel>
			<Label id="SaleDiscount" text="-{d:sale_discount}%" />
		</Panel>
		<Panel class="FrontpageCellTint" />
		<Panel class="FrontpageCellFooter">
			<Label class="FrontpageCellTitle" text="{g:dota_item_name:item_def}" />
			<Panel class="FillWidth" />
			<Panel id="ItemPrices">
				<Label id="ItemBasePrice" text="{g:dota_item_base_price:item_def}" />
				<Label id="ItemPrice" text="{g:dota_item_price:item_def}" />
			</Panel>
		</Panel>
	</DOTAFrontpageStoreItem>

</root>
