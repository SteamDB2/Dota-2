	<DOTAHeroPlusPickWinBanRow>
		<Panel class="RowIndexColumn">
			<Label text="{d:row_index}" />
		</Panel>

		<Panel class="HeroNameColumn RowBlockWrapper">
			<DOTAHeroImage id="HeroImage" />
		</Panel>
		
		<Panel id="WinColumn" class="WeeksColumn RowBlockWrapper">
			<Label id="WinRateStart" text="{s:hero_win_start_percent}%" class="SimpleStatColumn MonoNumbersFont Medium" />
			<UICanvas id="WinRateGraph" class="HeroStatGraph"/>
			<Label id="WinRateEnd" text="{s:hero_win_end_percent}%" class="SimpleStatColumn MonoNumbersFont Medium" />
			<Label id="WinRateChange" text="{s:hero_win_change_percent}%" class="SimpleStatColumn MonoNumbersFont Medium" />
		</Panel>
		<Panel id="PickColumn" class="WeeksColumn RowBlockWrapper">
			<Label id="PickRateStart" text="{s:hero_pick_start_percent}%" class="SimpleStatColumn MonoNumbersFont Medium" />
			<UICanvas id="PickRateGraph" class="HeroStatGraph"/>
			<Label id="PickRateEnd" text="{s:hero_pick_end_percent}%" class="SimpleStatColumn MonoNumbersFont Medium" />
			<Label id="PickRateChange" text="{s:hero_pick_change_percent}%" class="SimpleStatColumn MonoNumbersFont Medium" />
		</Panel>
		<Panel id="BanColumn" class="WeeksColumn RowBlockWrapper">
			<Label id="BanRateStart" text="{s:hero_ban_start_percent}%" class="SimpleStatColumn MonoNumbersFont Medium" />
			<UICanvas id="BanRateGraph" class="HeroStatGraph"/>
			<Label id="BanRateEnd" text="{s:hero_ban_end_percent}%" class="SimpleStatColumn MonoNumbersFont Medium" />
			<Label id="BanRateChange" text="{s:hero_ban_change_percent}%" class="SimpleStatColumn MonoNumbersFont Medium" />
		</Panel>
	
