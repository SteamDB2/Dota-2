<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hudstyles.vcss_c" />
		<include src="s2r://panorama/styles/hud/dota_hud_broadcaster.vcss_c" />
	</styles>
	<DOTABroadcasterSelection hittestchildren="false" onactivate="DOTASelectBroadcaster();" >
		<Panel id="SelectionTitle">
			<Image id="LanguageFlag" />
			<Label id="TitleLabel" />
		</Panel>
		<Panel id="SelectionBroadcasters">
			<Panel id="Broadcaster0" class="Broadcaster Hidden">
				<DOTAAvatarImage id="AvatarImage0" class="BroadcasterAvatar" />
				<Label id="Name0" class="BroadcasterName" />
			</Panel>
			<Panel id="Broadcaster1" class="Broadcaster Hidden">
				<DOTAAvatarImage id="AvatarImage1" class="BroadcasterAvatar" />
				<Label id="Name1" class="BroadcasterName" />
			</Panel>
			<Panel id="Broadcaster2" class="Broadcaster Hidden">
				<DOTAAvatarImage id="AvatarImage2" class="BroadcasterAvatar" />
				<Label id="Name2" class="BroadcasterName" />
			</Panel>
			<Panel id="Broadcaster3" class="Broadcaster Hidden">
				<DOTAAvatarImage id="AvatarImage3" class="BroadcasterAvatar" />
				<Label id="Name3" class="BroadcasterName" />
			</Panel>
		</Panel>
	</DOTABroadcasterSelection>
</root>


