<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hudstyles.vcss_c" />
		<include src="s2r://panorama/styles/hud/dota_hud_courier.vcss_c" />
	</styles>
	<DOTACourier>
		<Panel id="CourierControls" hittest="false" >
			<Button id="SelectCourierButton" class="CourierButton" onactivate="DOTAHUDCourierSelectLeftClick();"  onmouseout="UIHideTextTooltip()" oncontextmenu="DOTAHUDCourierSelectRightClick();">			
			</Button>
			<Panel id="ItemsOnCourierBackground">
				<Label id="ItemsOnCourier" class="MonoNumbersFont" text="{d:num_courier_items}"/>
			</Panel>
		      <Button id="CourierBurstButton" class="CourierButton"  onactivate="DOTAHUDCourierBurst();" onmouseover="UIShowTextTooltip( #DOTA_HUD_CourierBurst )" onmouseout="UIHideTextTooltip()">
		        <Label id="BurstCooldownLabel" class="MonoNumbersFont" text="{d:burst_cooldown}" hittest="false" />
		      </Button>
		      <Button id="CourierShieldButton" class="CourierButton"  onactivate="DOTAHUDCourierShield();" onmouseover="UIShowTextTooltip( #DOTA_HUD_CourierShield )" onmouseout="UIHideTextTooltip()">
		        <Label id="ShieldCooldownLabel" class="MonoNumbersFont" text="{d:shield_cooldown}" hittest="false" />
		      </Button>
			<Button id="DeliverItemsButton" class="CourierButton" onactivate="DOTAHUDCourierDeliverLeftClick();" oncontextmenu="DOTAHUDCourierDeliverRightClick();" onmouseover="UIShowTextTooltip( #DOTA_HUD_CourierDeliver )" onmouseout="UIHideTextTooltip()" require-composition-layer="true" >
				<Image id="Spinner" class="CourierButton"/>
				<DOTAHeroImage id="HeroImage" heroid="55"/>
				<Image id="OtherHeroDeliver" class="CourierButton" onactivate="DOTAHUDCourierDeliverToBestOtherPlayer();"/>
			</Button>
		</Panel>
		<Panel id="DeadCourierPanel" onactivate="DOTAHUDCourierDeadLeftClick();" >
			<Panel id="CourierDeadIcon" hittest="false" />
			<Label id="CourierRespawnTimer" text="{s:respawn_time}" hittest="false" />
		</Panel>
	</DOTACourier>
</root>


