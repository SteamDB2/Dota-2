<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hudstyles.vcss_c" />
		<include src="s2r://panorama/styles/hud/dota_hud_found_neutral_item_toast.vcss_c" />
	</styles>
	
	<DOTAFoundNeutralItemToast toast_duration_override="10s">

		<DOTAItemImage id="ItemImage" showtooltip="false" />
		
		<Panel id="ItemDetails">
			<Panel class="LeftRightFlow">
				<Label id="ItemName" text="{g:dota_ability_name:item_ability_id}" />
				<Panel class="InfoIcon" />
			</Panel>
			<Label id="TierName" text="#DOTA_FoundNeutralItem_ItemTier" html="true" />
			<Panel class="LeftRightFlow">
				<Label id="FoundBy" text="#DOTA_FoundNeutralItem_FoundBy" />
				<DOTAHeroImage id="HeroImage" heroimagestyle="icon" />
			</Panel>
		</Panel>

	</DOTAFoundNeutralItemToast>
	
</root>


