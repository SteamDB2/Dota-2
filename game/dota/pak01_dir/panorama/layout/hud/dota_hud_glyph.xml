<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hudstyles.vcss_c" />
		<include src="s2r://panorama/styles/hud/dota_hud_glyph.vcss_c" />
	</styles>
	<DOTAGlyph>
		<Panel id="NormalRoot" onmouseover="DOTAHUDShowGlyphTooltip()" onmouseout="DOTAHUDHideGlyphTooltip()"	onactivate="DOTAHUDActivateGlyph()">
			<Button id="GlyphButton">
			</Button>
			<Panel id="GlyphCooldown" hittest="false" />
		</Panel>
		<Panel id="RadiantRoot" onmouseover="DOTAHUDShowSpectatorGlyphTooltip(2)" onmouseout="DOTAHUDHideSpectatorGlyphTooltip()">
			<Button id="RadiantGlyphButton"/>
			<Panel id="RadiantGlyphCooldown"/>
		</Panel>
		<Panel id="DireRoot" onmouseover="DOTAHUDShowSpectatorGlyphTooltip(3)" onmouseout="DOTAHUDHideSpectatorGlyphTooltip()">
			<Button id="DireGlyphButton" />
			<Panel id="DireGlyphCooldown"/>
		</Panel>
		<Panel id="SpectatorDivider" hittest="false" />
	</DOTAGlyph>
</root>


