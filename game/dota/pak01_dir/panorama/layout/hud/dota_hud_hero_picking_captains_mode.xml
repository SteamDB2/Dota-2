	<snippets>
		<snippet name="HeroSlot">
			<DOTAHeroPickingCaptainsModeHeroSlot class="DisableHeroSlot">
				<Panel class="TurnBlock">
					<Panel class="BanX"/>
					<Panel id="HeroBox">
						<Label id="PickLabel" class="BoxLabel" text="#DOTA_HeroSelector_SelectHero_Label"/>
						<Label id="BanLabel" class="BoxLabel" text="#DOTA_HeroSelector_BanHero_Label"/>
						<DOTAHeroImage id="HeroImage" />
					</Panel>
					<Panel class="TurnLine"/>
					<Label class="PickOrder MonoNumbersFont" text="{d:pick_order}" />
				</Panel>
			</DOTAHeroPickingCaptainsModeHeroSlot>
		</snippet>

