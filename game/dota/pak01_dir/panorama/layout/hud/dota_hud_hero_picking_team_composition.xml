<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hero_roles.vcss_c" />
		<include src="s2r://panorama/styles/hud/dota_hud_hero_picking_team_composition.vcss_c" />
	</styles>

	<snippets>
		<snippet name="RoleRow">
			<Panel class="RoleRow">
				<Label text="{s:role_name}" />
				<Panel class="RowPip RowPip1" />
				<Panel class="RowPip RowPip2" />
				<Panel class="RowPip RowPip3" />
				<Panel class="RowPip RowPip4" />
				<Panel class="RowPip RowPip5" />
				<Panel class="RowPip RowPip6" />
				<Panel class="RowPip RowPip7" />
				<Panel class="RowPip RowPip8" />
				<Label class="RowPipExtra" text="+" />
			</Panel>
		</snippet>
	</snippets>

	<DOTAHeroPickingTeamComposition>
		<Label class="Title" text="#DOTA_HUD_Pregame_TeamComposition_Title" />
		<Panel id="RoleColumnContainer">
			<Panel class="RoleColumn" />	
			<Panel class="RoleColumn" />
		</Panel>
		<Panel id="TypeCountContainer">
			<Label id="MeleeLabel" html="true" text="#DOTA_HUD_Pregame_TeamComposition_MeleeHeroes"/>
			<Label id="RangedLabel" html="true" text="#DOTA_HUD_Pregame_TeamComposition_RangedHeroes"/>
		</Panel>
	</DOTAHeroPickingTeamComposition>
</root>
