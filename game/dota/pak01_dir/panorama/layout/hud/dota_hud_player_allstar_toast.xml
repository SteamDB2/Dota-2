<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hudstyles.vcss_c" />
		<include src="s2r://panorama/styles/hud/dota_hud_player_salute_toast.vcss_c" />
		<include src="s2r://panorama/styles/hud/dota_hud_player_allstar_toast.vcss_c" />
	</styles>

	<DOTAPlayerAllStarToast class="BattlePassCell" hittest="false" hittestchildren="false" toast_duration_override="6s">
		<Panel id="SourcePlayer" class="ToastPlayer">
			<DOTAHeroImage id="SourceHeroImage" heroimagestyle="landscape" scaling="stretch-to-fit-x-preserve-aspect" />
		</Panel>
		<Panel id="SaluteAction">
			<Label id="SaluteText" text="{s:all_star_type_text}" />
			<Label class="SaluteBody" text="#DOTA_AllStar_Toast_Player" html="true" />
		</Panel>
		<Panel id="TargetPlayer" class="ToastPlayer">
			<DOTAHeroImage id="TargetHeroImage" heroimagestyle="landscape" scaling="stretch-to-fit-x-preserve-aspect" />
			<Label text="{g:dota_player_name:nh:target_player_id}" html="true" />
		</Panel>
	</DOTAPlayerAllStarToast>
</root>


