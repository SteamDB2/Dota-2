		    <Label class="RiverVialTitle" text="#DOTA_RiverVial_Title" hittest="false" />
        <Panel id="RiverVialButtons" class="RiverVialButtonContainer">
          <!-- Filled in dynamically -->
        </Panel>
        <Panel id="RiverVialButtons2" class="RiverVialButtonContainer">
          <!-- Filled in dynamically -->
        </Panel> 
      </Panel>
      <Button class="PanelSlideThumb RiverVialThumb" onactivate="DOTARiverVialToggleExpand()">
        <Panel class="PanelSlideThumbArrow"/>
      </Button>
    </Panel>
	</DOTARiverVial>
