<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hudstyles.vcss_c" />
		<include src="s2r://panorama/styles/hud/dota_hud_spec_courier_killed.vcss_c" />
	</styles>
	<!--  toast_duration_override="10000.0" Add this attribute for testing if needed-->
	<DOTASpecCourierKilledToast toast_duration_override="4.5">
		<Panel id="CourierDeadHeader">
			<Panel id="CourierDeadIcon"/>
			<Label class="PlayerCourierKilledText" text="#DOTA_HUD_KilledPersonalCourier"/>
			<Label id="CourierKilledDireNoItems" class="CourierTeamKillText" html="true" text="#DOTA_HUD_DireKilledCourierNoItems"/>
			<Label id="CourierKilledRadiantNoItems" class="CourierTeamKillText" html="true" text="#DOTA_HUD_RadiantKilledCourierNoItems"/>
		</Panel>

		<Panel class="TopBottomFlow CourierKillContentPanel">
			<Panel id="CourierKilledItemsContent" class="TopBottomFlow">
				<Panel class="ItemsRow LeftRightFlow" >
					<DOTAItemImage id="ItemIcon0" class="LostItemIcon">
						<Label class="ItemQuantity" text="{d:quantity}"/>
					</DOTAItemImage>
					<DOTAItemImage id="ItemIcon1" class="LostItemIcon">
						<Label class="ItemQuantity" text="{d:quantity}"/>
					</DOTAItemImage>
					<DOTAItemImage id="ItemIcon2" class="LostItemIcon" >
						<Label class="ItemQuantity" text="{d:quantity}"/>
					</DOTAItemImage>
				</Panel>
				<Panel class="ItemsRow LeftRightFlow" >
					<DOTAItemImage id="ItemIcon3" class="LostItemIcon" >
						<Label class="ItemQuantity" text="{d:quantity}"/>
					</DOTAItemImage>
					<DOTAItemImage id="ItemIcon4" class="LostItemIcon" >
						<Label class="ItemQuantity" text="{d:quantity}"/>
					</DOTAItemImage>
					<DOTAItemImage id="ItemIcon5" class="LostItemIcon" >
						<Label class="ItemQuantity" text="{d:quantity}"/>
					</DOTAItemImage>
				</Panel>
				<Panel class="ItemsRow LeftRightFlow" >
					<DOTAItemImage id="ItemIcon6" class="LostItemIcon" >
						<Label class="ItemQuantity" text="{d:quantity}"/>
					</DOTAItemImage>
					<DOTAItemImage id="ItemIcon7" class="LostItemIcon" >
						<Label class="ItemQuantity" text="{d:quantity}"/>
					</DOTAItemImage>
					<DOTAItemImage id="ItemIcon8" class="LostItemIcon" >
						<Label class="ItemQuantity" text="{d:quantity}"/>
					</DOTAItemImage>
				</Panel>
			</Panel>
		</Panel>
	</DOTASpecCourierKilledToast>
</root>


