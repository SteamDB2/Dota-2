<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hudstyles.vcss_c" />
		<include src="s2r://panorama/styles/hud/dota_hud_spec_talent_changed.vcss_c" />
		<include src="s2r://panorama/styles/hud/dota_hud_spec_talent_changed_treetoast.vcss_c" />
	</styles>
	<DOTATalentChangedItemTreeToast toast_duration_override="6s">
		<DOTAHeroImage id="HeroImagePortrait" class="TopBarHeroImage" heroimagestyle="portrait"/>
		<Panel id="StatRoot">
			<Panel id="StatLabels">
				<Panel id="StatLabelsLeft" class="StatLabelsColumn">
					<Label id="StatLabel25L" class="StatLabelTextLong" text=""/>
					<Label id="StatLabel20L" class="StatLabelText" text=""/>
					<Label id="StatLabel15L" class="StatLabelText" text=""/>
					<Label id="StatLabel10L" class="StatLabelTextLong" text=""/>
				</Panel>
				<Panel id="StatLabelsRight" class="StatLabelsColumn">
					<Label id="StatLabel25R" class="StatLabelTextLong" text=""/>
					<Label id="StatLabel20R" class="StatLabelText" text=""/>
					<Label id="StatLabel15R" class="StatLabelText" text=""/>
					<Label id="StatLabel10R" class="StatLabelTextLong" text=""/>
				</Panel>
			</Panel>
			<Panel id="StatBranch">
				<Panel id="StatBranchBG"/>
				<Panel id="StatBranchGraphics" require-composition-layer="true" always-cache-composition-layer="true">
					<Panel id="StatBranchChannel">
						<Panel id="StatPipContainer" class="">
							<Panel id="StatRow25" class="StatBranchRow">
								<Panel class="StatBranchPip LeftBranchPip"/>
								<Panel class="StatBranchPip RightBranchPip"/>
							</Panel>
							<Panel id="StatRow20" class="StatBranchRow RightBranchSelected">
								<Panel class="StatBranchPip LeftBranchPip"/>
								<Panel class="StatBranchPip RightBranchPip"/>
							</Panel>
							<Panel id="StatRow15" class="StatBranchRow LeftBranchSelected">
								<Panel class="StatBranchPip LeftBranchPip"/>
								<Panel class="StatBranchPip RightBranchPip"/>
							</Panel>
							<Panel id="StatRow10" class="StatBranchRow LeftBranchSelected">
								<Panel class="StatBranchPip LeftBranchPip"/>
								<Panel class="StatBranchPip RightBranchPip"/>
							</Panel>
						</Panel>							
						<Panel class="LevelProgress">
							<ProgressBar id="StatLevelProgressBar" min="0" max="25" value="20" />
						</Panel>
						<Panel class="LevelProgressBlur">
							<ProgressBar id="StatLevelProgressBarBlur" min="0" max="25" value="20" />
						</Panel>
					</Panel>
				</Panel>
			</Panel>
		</Panel>
	</DOTATalentChangedItemTreeToast>
</root>


