<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hudstyles.vcss_c" />
		<include src="s2r://panorama/styles/hud/dota_hud_spectator_graph.vcss_c" />
	</styles>
	<DOTASpectatorGraph>
		<Panel class="LeftRightFlow">
			<Panel class="DotaPlusIconSmall"/>
			<Label id="Title" text="{s:GraphTitle}" />
		</Panel>
		<Panel id="GraphContainer" >
			<Label id="DetailsBasicGraphsTopTeam" text="{s:radiant_name}" />
			<Label id="DetailsBasicGraphsBottomTeam" text="{s:dire_name}" />
			<Label id="DetailsBasicGraphsTopY1" class="MonoNumbersFont GraphYAxisLabel" text="{s:graph_y_1}" />
			<Label id="DetailsBasicGraphsTopY2" class="MonoNumbersFont GraphYAxisLabel" text="{s:graph_y_2}" />
			<Label id="DetailsBasicGraphsTopY3" class="MonoNumbersFont GraphYAxisLabel" text="{s:graph_y_3}" />
			<Label id="DetailsBasicGraphsBottomY1" class="MonoNumbersFont GraphYAxisLabel" text="{s:graph_y_1}" />
			<Label id="DetailsBasicGraphsBottomY2" class="MonoNumbersFont GraphYAxisLabel" text="{s:graph_y_2}" />
			<Label id="DetailsBasicGraphsBottomY3" class="MonoNumbersFont GraphYAxisLabel" text="{s:graph_y_3}" />
			<UICanvas id="GraphCanvas" />
		</Panel>
		<Panel id="EventsContainer">
		</Panel>
		<Panel id="GraphTimeline">
			<Label class="TimelineLabel" text="{s:timeline_label_0}" />
			<Panel class="TimelineSpacer" />
			<Label class="TimelineLabel" text="{s:timeline_label_1}" />
			<Panel class="TimelineSpacer" />
			<Label class="TimelineLabel" text="{s:timeline_label_2}" />
			<Panel class="TimelineSpacer" />
			<Label class="TimelineLabel" text="{s:timeline_label_3}" />
			<Panel class="TimelineSpacer" />
			<Label class="TimelineLabel" text="{s:timeline_label_4}" />
		</Panel>
		<Label id="TeamTotalsTitle" text="{s:TotalsTitle}" />
		<Panel id="TeamTotals">
			<Panel class="TeamTotalColumn">
				<Label id="RadiantTotalHeader" text="#DOTA_GoodGuys" />
				<Panel class="TeamTotalValueRow">
					<Panel class="GoldIcon" />
					<Label class="TeamTotalValueLabel" text="{s:radiant_team_total}" />
				</Panel>
			</Panel>
			<Panel class="TeamTotalColumn">
				<Label id="DireTotalHeader" text="#DOTA_BadGuys" />
				<Panel class="TeamTotalValueRow">
					<Panel class="GoldIcon" />
					<Label class="TeamTotalValueLabel" text="{s:dire_team_total}" />
				</Panel>
			</Panel>
		</Panel>
		<Button id="CloseButton" onactivate="DOTASpectatorGraphClose()" />
	</DOTASpectatorGraph>
</root>


