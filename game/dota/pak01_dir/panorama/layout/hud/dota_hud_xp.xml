<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hudstyles.vcss_c" />
		<include src="s2r://panorama/styles/hud/dota_hud_xp.vcss_c" />
	</styles>
	<DOTAXP hittest="false">
		<Panel id="LevelBackground" onactivate="DOTAHUDXPBarClicked();" />
		<Label id="LevelLabel" class="MonoNumbersFont" text="{d:level}" hittest="false" />
		<CircularProgressBar id="CircularXPProgress" onactivate="DOTAHUDXPBarClicked();" />
		<CircularProgressBar id="CircularXPProgressBlur" hittest="false"/>
		<ProgressBar id="XPProgress" onactivate="DOTAHUDXPBarClicked();" >
			<Label id="XPLabel" text="#DOTA_Hud_XP" hittest="false" />
		</ProgressBar>
		<Label id="LifetimeLabel" class="MonoNumbersFont" text="#DOTA_Hud_Lifetime" hittest="false" />
		<ProgressBar id="LifetimeProgress" class="MonoNumbersFont" hittest="false" />
			
	</DOTAXP>
</root>


