<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hud/tooltip_glyph.vcss_c" />
	</styles>

	<DOTATooltipGlyph hittest="false" >
		<Label id="title" text="#DOTA_Tooltip_ability_fountain_glyph" hittest="false" />
		<Label id="description" class="Description" text="#DOTA_Tooltip_ability_fountain_glyph_Description" hittest="false" />
		<Label class="RadiantTeam Description" text="#DOTA_Tooltip_Glyph_Radiant" hittest="false" />
		<Label class="DireTeam Description" text="#DOTA_Tooltip_Glyph_Dire" hittest="false" />
		<Panel id="cooldown" hittest="false" >
			<Panel id="cooldown_icon" hittest="false" />
			<Label id="cooldown_duration" text="{s:glyph_base_cooldown}" hittest="false" />
		</Panel>
		<Label id="cooldown_timer_label" text="#DOTA_HUD_GlyphCooldown" hittest="false" />
		<Label id="cooldown_ready_label" text="#DOTA_Tooltip_glyph_cooldown_ready" hittest="false" />
	</DOTATooltipGlyph>
</root>
