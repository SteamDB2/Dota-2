							<Panel class="BulletList LeftRightFlow" >
								<Panel class="Bullet" />
								<Label text="#Debut_Arcana_Juggernaut_Feature11" />
							</Panel>														
							<Panel class="BulletList LeftRightFlow" >
								<Panel class="Bullet" />
								<Label text="#Debut_Arcana_Juggernaut_Feature7" />
							</Panel>							
							<Panel class="BulletList LeftRightFlow" >
								<Panel class="Bullet" />
								<Label text="#Debut_Arcana_Juggernaut_Feature5" />
							</Panel>
							<Panel class="BulletList LeftRightFlow" >
