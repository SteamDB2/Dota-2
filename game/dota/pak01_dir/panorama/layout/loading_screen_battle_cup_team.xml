<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/loading_screen.vcss_c" />
		<include src="s2r://panorama/styles/loading_screen_battle_cup_winners.vcss_c" />
	</styles>

	<DOTALoadingScreenBattleCupTeam>
		<DOTABattleCupVictoryIcon id="BattleCupTrophyImage" override-streak="1" />
		<Panel id="TeamInfo" >
			<Label id="TeamInfoHeader" text="#loading_screen_weekend_tourney_champion" />
			<Panel id="TeamInfoSubtitle" class="LeftRightFlow">
				<Label id="BattleCupTier" text="#dota_battle_cup_tier" />
				<Label id="BattleCupDivision" text="#dota_battle_cup_division" />
			</Panel>
			<Panel id="TeamInfoContainer">
				<DOTAUGCImage id="TeamLogo" class="TeamLogo" scaling="stretch-to-fit-preserve-aspect" />
				<Panel id="TeamNameContainer" class="TopBottomFlow">
					<Label id="BattleCupTeamHeader" text="#loading_screen_weekend_tourney_team" />
					<Label id="TeamName" text="{s:team_name}" />
				</Panel>
			</Panel>			
		</Panel>
		<Panel id="PlayerContainer" />
	</DOTALoadingScreenBattleCupTeam>
</root>
