<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/loading_screen.vcss_c" />
	</styles>

	<Panel class="CustomGameLoadingSidebar">
		<Panel id="CustomGameModeHeader">
			<Label id="GameModeName" text="#addon_game_name" />
		</Panel>
		<Panel class="MapInfo">
			<Label id="MapInfo" text="#LoadingScreenMapInfo" />
		</Panel>
		<Panel class="StatusBox">
			<Panel class="StatusHeader">
				<Panel id="PlayersHeader">
					<Label id="PlayersInfo" text="#LoadingScreenPlayersInfo" />
					<Label id="SpectatorsInfo" text="#LoadingScreenSpectatorsInfo" />
				</Panel>
				<Panel class="FillSpacerWidth" />
				<Label id="LoadingScreenTimer" text="#LoadingScreenTimer" />
				<Image id="WaitingImage" />
			</Panel>
			<Panel class="LoadingScreenPlayersList">
				<Panel class="TeamContainer">
					<DOTALoadingScreenPlayersList team="-1" />
				</Panel>
			</Panel>
		</Panel>
	</Panel>
</root>
