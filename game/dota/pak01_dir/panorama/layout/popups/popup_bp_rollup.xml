							<Panel id="LevelCircle">
								<Label class="TotalLevel" text="{i:battle_pass_level}" />
							</Panel>
						</Panel>
					</Panel>
						<Label class="SummaryLabel" text="#DOTA_BattlePassRollUp_Title" />
						<Label class="AccountNameLabel" text="{g:dota_persona:pro_short:b:account_id}" html="true"/>
						<Label class="TitleLabel TI6" text="#DOTA_EventName_International2016" />
						<Label class="TitleLabel Fall2016" text="#DOTA_EventName_FallMajor2016"/>
						<Label class="TitleLabel Winter2017" text="#DOTA_EventName_WinterMajor2017"/>
						<Label class="TitleLabel TI7" text="#DOTA_EventName_International2017"/>
						<Label class="TitleSubLabel TI6" text="#DOTA_BattlePassRollUp_TI6_SubTitle" />
						<Label class="TitleSubLabel Fall2016" text="#DOTA_BattlePassRollUp_Fall2016_SubTitle" />
						<Label class="TitleSubLabel Winter2017" text="#DOTA_BattlePassRollUp_Winter2017_SubTitle" />
						<Label class="TitleSubLabel TI7" text="#DOTA_BattlePassRollUp_TI7_SubTitle" />
						<Panel class="TitleSection">
					</Panel>        
				  </Panel>
				</Panel>
				<Panel id="RollUpContent">
					<Panel class="TitleBar">
					  <Label class="DateSubtitle" text="#DOTA_Profile_BP_Rollup_Quest_Progress"/>
					</Panel>				
					<Panel id="Questline0" class="Section QuestSection">
						<Panel class="QuestLineBG"/>
						<Panel class="QuestStatsContainer">
							<Label class="QuestLineName" text="{s:questline_0_name}"/>
							<Panel class="LeftRightFlow">
								<Label class="QuestLineValueLabel" text="#DOTA_Profile_BP_Rollup_Quest_Completed"/>
								<Label class="QuestLineValue" text="{i:questline_0_completed}"/>
								<Label class="QuestLineValueLabel" text="/"/>
								<Label class="QuestLineValue" text="{i:questline_0_total}"/>
							</Panel>
							<Panel class="LeftRightFlow">
								<Label class="QuestLineValueLabel" text="#DOTA_Profile_BP_Rollup_Quest_Stars"/>
								<Panel class="StarBlock TopBottomFlow">
									<Label class="QuestLineValue" text="{i:questline_0_onestar}"/>
									<Panel class="LeftRightFlow CenterAlign">
										<Panel class="StarsIcon"/>
									</Panel>
								</Panel>
								<Panel class="StarBlock TopBottomFlow">
									<Label class="QuestLineValue" text="{i:questline_0_twostar}"/>								
									<Panel class="LeftRightFlow">
										<Panel class="StarsIcon"/>
										<Panel class="StarsIcon"/>
									</Panel>
								</Panel>
								<Panel class="StarBlock TopBottomFlow">
									<Label class="QuestLineValue" text="{i:questline_0_threestar}"/>
									<Panel class="LeftRightFlow">
										<Panel class="StarsIcon"/>
										<Panel class="StarsIcon"/>
										<Panel class="StarsIcon"/>
									</Panel>
								</Panel>
							</Panel>
						</Panel>
					</Panel>
					<Panel id="Questline1" class="Section QuestSection">
						<Panel class="QuestLineBG"/>
						<Panel class="QuestStatsContainer">
							<Label class="QuestLineName" text="{s:questline_1_name}"/>
							<Panel class="LeftRightFlow">
								<Label class="QuestLineValueLabel" text="#DOTA_Profile_BP_Rollup_Quest_Completed"/>
								<Label class="QuestLineValue" text="{i:questline_1_completed}"/>
								<Label class="QuestLineValueLabel" text="/"/>
								<Label class="QuestLineValue" text="{i:questline_1_total}"/>
							</Panel>
							<Panel class="LeftRightFlow">
								<Label class="QuestLineValueLabel" text="#DOTA_Profile_BP_Rollup_Quest_Stars"/>
								<Panel class="StarBlock TopBottomFlow">
									<Label class="QuestLineValue" text="{i:questline_1_onestar}"/>
									<Panel class="LeftRightFlow CenterAlign">
										<Panel class="StarsIcon"/>
									</Panel>
								</Panel>
								<Panel class="StarBlock TopBottomFlow">
									<Label class="QuestLineValue" text="{i:questline_1_twostar}"/>								
									<Panel class="LeftRightFlow">
										<Panel class="StarsIcon"/>
										<Panel class="StarsIcon"/>
									</Panel>
								</Panel>
								<Panel class="StarBlock TopBottomFlow">
									<Label class="QuestLineValue" text="{i:questline_1_threestar}"/>
									<Panel class="LeftRightFlow">
										<Panel class="StarsIcon"/>
										<Panel class="StarsIcon"/>
										<Panel class="StarsIcon"/>
									</Panel>
								</Panel>
							</Panel>							
						</Panel>
					</Panel>
					<Panel id="Questline2" class="Section QuestSection">
						<Panel class="QuestLineBG"/>
						<Panel class="QuestStatsContainer">
