					<Panel class="RollupColumn">
						<Panel class="TitleBar">
							<Label class="DateSubtitle" text="#DOTA_SeasonPass_SecondaryTabHeader_Wagering"/>
						</Panel>
						<Panel id="Wagering" class="Section">
							<Panel id="PersonalWageringContainer" class="LeftRightFlow">
								<Panel class="TopBottomFlow Thirds">
									<Label class="WagerHeader" text="#DOTA_Compendium_Wagering_TotalTokensWagered_Rollup"/>
									<Panel class="LeftRightFlow">
										<Panel class="WagerTotalIcon"/><Label class="WagerValue" text="{i:wagering_total_wagered}"/>
									</Panel>
									<Label class="WagerHeader" text="#DOTA_Compendium_Wagering_SuccessRate"/>
									<Label class="WagerValue" text="{i:wager_success_rate}%"/>
								</Panel>
								<Panel class="TopBottomFlow Thirds">
									<Label class="WagerHeader" text="#DOTA_Compendium_Wagering_TotalPointsWon"/>
									<Panel class="LeftRightFlow">
										<Panel class="PointTotalIcon"/>
										<Label class="WagerValue" text="{i:wagering_total_won}"/>
									</Panel>
									<Label class="WagerHeader" text="#DOTA_Compendium_Wagering_AverageWinnings"/>
									<Panel class="LeftRightFlow">
										<Panel class="PointTotalIcon"/>
										<Label class="WagerValue" text="{i:wagering_average_won}"/>
									</Panel>
								</Panel>
								<Panel class="TopBottomFlow Thirds">
									<Label class="WagerHeader" text="#DOTA_Profile_BP_Rollup_Tips_Given"/>
									<Panel class="LeftRightFlow">
										<Panel class="WagerTotalIcon"/><Label class="WagerValue" text="{i:wagering_total_tips}"/>
									</Panel>
									<!--Label class="WagerHeader" text="#DOTA_Profile_BP_Rollup_Tips_Received"/>
