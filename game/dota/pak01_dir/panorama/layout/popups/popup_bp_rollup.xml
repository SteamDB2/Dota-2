								<Label class="QuestLineValueLabel" text="/"/>
								<Label class="QuestLineValue" text="{i:achivements_total}"/>								
							</Panel>

							<Label class="QuestLineValueLabel" text="#DOTA_Profile_BP_Rollup_Achievements_Points"/>
							<Panel class="AchievementLine LeftRightFlow">
								<Panel class="PointTotalIcon"/>
								<Label class="WagerValue" text="{i:achivements_points}"/>
							</Panel>						
						</Panel>
					</Panel>					
					</Panel>
					
