						<Panel id="Predictions" class="Section">
							<Panel class="MiddleAlign TopBottomFlow">
								<Panel class="AchievementLine LeftRightFlow">
									<Label class="QuestLineValueLabel" text="#DOTA_Profile_BP_Rollup_Predictions_Correct"/>
									<Label class="QuestLineValue" text="{i:predictions_correct}"/>
									<Label class="QuestLineValueLabel" text="/"/>
									<Label class="QuestLineValue" text="{i:predictions_total}"/>										
								</Panel>
								<Label class="QuestLineValueLabel" text="#DOTA_Profile_BP_Rollup_Predictions_Earned"/>
								<Panel class="AchievementLine LeftRightFlow">
									<Panel class="PointTotalIcon"/>
