									<Label class="BattleCupValue" text="{i:battlecup_wins}"/>
								</Panel>
								<Panel class="AchievementLine LeftRightFlow">
									<Label class="BattleCupValueLabel" text="#DOTA_Profile_BP_Rollup_Battle_Cup_Score"/>
									<Label class="BattleCupValue" text="{i:battlecup_score}"/>
								</Panel>
							</Panel>
						</Panel>					
					</Panel>

					<Panel class="RollupColumn">
						<Panel class="TitleBar">
							<Label class="DateSubtitle" text="#DOTA_SeasonPass_SecondaryTabHeader_Achievements"/>
						</Panel>					
					<Panel id="Achievements" class="Section">
