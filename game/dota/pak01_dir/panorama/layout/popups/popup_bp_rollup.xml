								</Panel>
								<Panel class="AchievementLine LeftRightFlow">
									<Label class="QuestLineValueLabel" text="#DOTA_Profile_BP_Rollup_Fantasy_Percentile"/>
									<Label class="QuestLineValue" text="{s:fantasy_percentile}"/>
								</Panel>
							</Panel>
						</Panel>					
					</Panel>

					
					<Panel class="TitleBar">
						<Label class="DateSubtitle" text="#DOTA_Profile_BP_Rollup_Fantasy_Card_Collection"/>
					</Panel>
					<Panel id="PlayerCards" class="Section">
						<Panel id="PlayerCardsBody">
							<!-- dynamically filled with PlayerCardTeam snippets -->
						</Panel>
						<Panel class="HitBlocker" hittest="true"/>
					</Panel>
				</Panel>
			</Panel>

			<Button class="CloseButton" onactivate="UIPopupButtonClicked()" />

		</Panel>
		
