								</Panel>
								<Panel class="StarBlock TopBottomFlow">
									<Label class="QuestLineValue" text="{i:questline_2_twostar}"/>								
									<Panel class="LeftRightFlow">
										<Panel class="StarsIcon"/>
										<Panel class="StarsIcon"/>
									</Panel>
								</Panel>
								<Panel class="StarBlock TopBottomFlow">
									<Label class="QuestLineValue" text="{i:questline_2_threestar}"/>
									<Panel class="LeftRightFlow">
										<Panel class="StarsIcon"/>
