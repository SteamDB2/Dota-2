<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_broadcaster_toast_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_broadcaster_toast_movie.vcss_c" />
	</styles>

	<DOTABroadcasterToast class="MainToastPanel">
		<Panel class="TopBottomFlow">
      <Movie id="Movie" src="file://{resources}/videos/promo/tempest3.webm" controls="none" repeat="true" autoplay="onload" />
      <Panel class="DetailsContainer" >
        <Panel class="LeftDetails" >
          <Panel id="LeftImage" class="ToastImage" />
          <Panel class="TopBottomFlow Details">
            <Label id ="ToastHeader" class="ToastHeader" text="#DOTA_BroadcasterToasts_WindowTitle" />
            <Label id ="Line1" class="ToastTextLine" text="#DOTA_BroadcasterToasts_WindowTitle" />
          </Panel>       
        </Panel>
        <Panel id="RightImage" class="ToastImage" />
      </Panel>
    </Panel>
    <Panel class="AlphaRender" />
	</DOTABroadcasterToast>
</root>
