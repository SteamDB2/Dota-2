<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_broadcaster_toast_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_broadcaster_toasts.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_broadcaster_toast_table.vcss_c" />
	</styles>

	<snippets>
		<snippet name="StyleTemplateBasic">
			<DOTABroadcasterToastTemplateBasic class="StyleTemplateBasic">
				<Panel class="LeftRightFlow">
					<Label text="#DOTA_BroadcasterToasts_TextEntry" />
					<TextEntry id="ToastTextEntry" class="TextEntryNormal" placeholder="#DOTA_BroadcasterToasts_TextEntryPlaceholder" multiline="true"  />
				</Panel>
			</DOTABroadcasterToastTemplateBasic>
		</snippet>
		<snippet name="StyleTemplateSingleImage">
			<DOTABroadcasterToastTemplateSingleImage class="StyleTemplateSingleImage">
				<Panel class="LeftRightFlow">
					<Panel id="LeftImage" onactivate="DOTAPopupBroadcasterShowImageSelector(LeftImage)">
						<Panel class="ImagePlaceholder"/>
					</Panel>
					<Panel class="TopBottomFlow">
						<TextEntry id="ToastTextEntryHeader" placeholder="#DOTA_BroadcasterToasts_TextEntryPlaceholder"/>
						<TextEntry id="ToastTextEntry" multiline="true" class="TextEntryNormal" placeholder="#DOTA_BroadcasterToasts_TextEntryPlaceholder"/>
					</Panel>
				</Panel>
			</DOTABroadcasterToastTemplateSingleImage>
		</snippet>
		<snippet name="StyleTemplateTable">
			<DOTABroadcasterToastTemplateTable class="StyleTemplateTable TableToastEditPanel" default-toast-duration="6.0">
				<Panel class="TopBottomFlow">
					<Panel class="LeftRightFlow">
						<Panel id="LeftImage" class="ToastImage TableImageSection" onactivate="DOTAPopupBroadcasterShowImageSelector(LeftImage)">
							<Panel class="ImagePlaceholder"/>
						</Panel>
						<Panel class="TopBottomFlow TableHeaderSection">
							<TextEntry id="ToastTextEntryHeader" class="TableTextHeader" placeholder="#DOTA_BroadcasterToasts_TextEntryPlaceholder"/>
							<Panel class="LeftRightFlow">
								<TextEntry id="h1" class="TableTextItem" placeholder="#DOTA_BroadcasterToasts_TextEntryPlaceholder"/>
								<TextEntry id="h2" class="TableTextItem" placeholder="#DOTA_BroadcasterToasts_TextEntryPlaceholder"/>
								<TextEntry id="h3" class="TableTextItem" placeholder="#DOTA_BroadcasterToasts_TextEntryPlaceholder"/>
								<TextEntry id="h4" class="TableTextItem" placeholder="#DOTA_BroadcasterToasts_TextEntryPlaceholder"/>
							</Panel>
						</Panel>
					</Panel>
					<!-- now do the table> -->
					<Panel class="LeftRightFlow">
						<TextEntry id="r1" class="TableTextItem" placeholder="#DOTA_BroadcasterToasts_TextEntryPlaceholder"/>
						<TextEntry id="r1c1" class="TableTextItem" placeholder="#DOTA_BroadcasterToasts_TableEntryPlaceholder"/>
						<TextEntry id="r1c2" class="TableTextItem" placeholder="#DOTA_BroadcasterToasts_TableEntryPlaceholder"/>
						<TextEntry id="r1c3" class="TableTextItem" placeholder="#DOTA_BroadcasterToasts_TableEntryPlaceholder"/>
						<TextEntry id="r1c4" class="TableTextItem" placeholder="#DOTA_BroadcasterToasts_TableEntryPlaceholder"/>
					</Panel>
					<Panel class="LeftRightFlow">
						<TextEntry id="r2" class="TableTextItem" placeholder="#DOTA_BroadcasterToasts_TextEntryPlaceholder"/>
						<TextEntry id="r2c1" class="TableTextItem" placeholder="#DOTA_BroadcasterToasts_TableEntryPlaceholder"/>
						<TextEntry id="r2c2" class="TableTextItem" placeholder="#DOTA_BroadcasterToasts_TableEntryPlaceholder"/>
						<TextEntry id="r2c3" class="TableTextItem" placeholder="#DOTA_BroadcasterToasts_TableEntryPlaceholder"/>
						<TextEntry id="r2c4" class="TableTextItem" placeholder="#DOTA_BroadcasterToasts_TableEntryPlaceholder"/>
					</Panel>
					<Panel class="LeftRightFlow">
						<TextEntry id="r3" class="TableTextItem" placeholder="#DOTA_BroadcasterToasts_TextEntryPlaceholder"/>
						<TextEntry id="r3c1" class="TableTextItem" placeholder="#DOTA_BroadcasterToasts_TableEntryPlaceholder"/>
						<TextEntry id="r3c2" class="TableTextItem" placeholder="#DOTA_BroadcasterToasts_TableEntryPlaceholder"/>
						<TextEntry id="r3c3" class="TableTextItem" placeholder="#DOTA_BroadcasterToasts_TableEntryPlaceholder"/>
						<TextEntry id="r3c4" class="TableTextItem" placeholder="#DOTA_BroadcasterToasts_TableEntryPlaceholder"/>
					</Panel>
				</Panel>
			</DOTABroadcasterToastTemplateTable>
		</snippet>
		<snippet name="StyleTemplateDualImage">
			<DOTABroadcasterToastTemplateDualImage class="StyleTemplateDualImage">
				<Panel class="LeftRightFlow">
					<Panel id="LeftImage" imageIndex="0" onactivate="DOTAPopupBroadcasterShowImageSelector(LeftImage)">
						<Panel class="ImagePlaceholder"/>
					</Panel>
					<Panel class="TopBottomFlow">
						<TextEntry id="ToastTextEntryHeader" class="TextEntryHeader DualImage" placeholder="#DOTA_BroadcasterToasts_TextEntryPlaceholder"/>
						<TextEntry id="ToastTextEntry" multiline="true" class="TextEntryNormal DualImage"  placeholder="#DOTA_BroadcasterToasts_TextEntryPlaceholder"/>
					</Panel>
					<Panel id="RightImage" imageIndex="1" onactivate="DOTAPopupBroadcasterShowImageSelector(RightImage)">
						<Panel class="ImagePlaceholder"/>
					</Panel>
				</Panel>
			</DOTABroadcasterToastTemplateDualImage>
		</snippet>
		<snippet name="StyleTemplateMultiline">
			<DOTABroadcasterToastTemplateMultiline class="StyleTemplateMultiline">
				<Panel class="LeftRightFlow">
					<Panel id="LeftImage" onactivate="DOTAPopupBroadcasterShowImageSelector(LeftImage)">
						<Panel class="ImagePlaceholder"/>
					</Panel>
					<Panel class="TopBottomFlow">
						<TextEntry id="ToastTextEntryHeader" class="TextEntryHeader" placeholder="#DOTA_BroadcasterToasts_TextEntryPlaceholder"/>
						<TextEntry id="ToastTextEntry1" placeholder="#DOTA_BroadcasterToasts_TextEntryPlaceholder"/>
						<TextEntry id="ToastTextEntry2" placeholder="#DOTA_BroadcasterToasts_TextEntryPlaceholder"/>
						<TextEntry id="ToastTextEntry3" placeholder="#DOTA_BroadcasterToasts_TextEntryPlaceholder"/>
					</Panel>
				</Panel>
			</DOTABroadcasterToastTemplateMultiline>
		</snippet>

		<snippet name="ImageSelection">
			<DOTABroadcasterImageSelection>
				<Panel id="ImageFilterSection" class="TopBottomFlow">
					<Label text="#DOTA_BroadcasterToasts_TextEntry" />
					<Panel id="ChampionImages"/>
					<Label text="#DOTA_BroadcasterToasts_TextEntry" />
					<Panel id="PlayerImages"/>
					<Label text="#DOTA_BroadcasterToasts_TextEntry" />
					<Panel id="TeamImages"/>
					<Label text="#DOTA_BroadcasterToasts_TextEntry" />
					<Panel id="GeneralImages" />
				</Panel>
			</DOTABroadcasterImageSelection>
		</snippet>

<!--
		<snippet name="BasicToast">
			<Panel>
				<Panel id="ImageFilterSection" class="LeftRightFlow">
					<Label text="#DOTA_BroadcasterToasts_TextEntry"  />
					<TextEntry id="ToastImageFilter" placeholder="#DOTA_BroadcasterToasts_FilteredImagePlaceholder" oninputsubmit="DOTABroadcasterImageFilterSubmit()" multiline="true" />
				</Panel>
				<Label id="FilteredImagesLabel" text="#DOTA_BroadcasterToasts_FilteredImages"/>
				<Panel id="FilteredImages" class="LeftRightFlow"/>
			</Panel>
		</snippet> -->
	</snippets>

	<DOTAPopupBroadcasterToasts class="PopupPanel Hidden" popupbackground="dim" oncancel="DOTABroadcasterCancel()">
		
		<Label class="PopupTitle" text="#DOTA_BroadcasterToasts_WindowTitle" />
		
		<Panel id="ImageContainer" class="TopBottomFlow">

			<Panel id="BroadcastStyleSelection" class="LeftRightFlow" hittest="false">
				<RadioButton class="ToastSelection" group="ToastSelection" selected="true" onactivate="DOTABroadcasterStyleBasic()">
					<Panel id="ToastStyleBasic"/>
				</RadioButton>
				<RadioButton class="ToastSelection" group="ToastSelection" selected="false" onactivate="DOTABroadcasterStyleSingleImage()">
					<Panel id="ToastStyleSingleImage"/>
				</RadioButton>
				<RadioButton class="ToastSelection" group="ToastSelection" selected="false" onactivate="DOTABroadcasterStyleTable()">
					<Panel id="ToastStyleTable"/>
				</RadioButton>
				<RadioButton class="ToastSelection" group="ToastSelection" selected="false" onactivate="DOTABroadcasterStyleDualImage()">
					<Panel id="ToastStyleDualImage"/>
				</RadioButton>
				<RadioButton class="ToastSelection" group="ToastSelection" selected="false" onactivate="DOTABroadcasterStyleMultiline()">
					<Panel id="ToastStyleMultiline"/>
				</RadioButton>
			</Panel>
		</Panel>

		<Panel class="ToastDurationContainer LeftRightFlow">
			<Label class="ToastDurationLabel" text="Duration:"/>
			<TextEntry id="ToastDuration" text="5.0"/>
			<ToggleButton id="HTMLToggle" selected="false" text="#DOTA_BroadcasterToasts_AllowHtml"/>
		</Panel>

		<Panel id="BroadcastContentsPanel">
		</Panel>
				
		<Panel class="PopupButtonRow">
			<Button id="PreviewButton" class="PopupButton" onactivate="DOTADisplayBroadcasterToast(true)">
				<Label text="#DOTA_BroadcasterToasts_PreviewToast" />
			</Button>
			<Button id="AcceptButton" class="PopupButton" onactivate="DOTADisplayBroadcasterToast(false)">
				<Label text="#DOTA_BroadcasterToasts_ShowToast" />
			</Button>
			<Button class="PopupButton" onactivate="DOTABroadcasterDismissAllPopups()">
				<Label text="#DOTA_BroadcasterToasts_DismissAll" />
			</Button>
			<Button class="PopupButton" onactivate="UIPopupButtonClicked()">
				<Label text="#DOTA_Cancel" />
			</Button>
		</Panel>
	</DOTAPopupBroadcasterToasts>
</root>
