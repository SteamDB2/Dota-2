<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_coaches_challenge_requirements_not_met.vcss_c" />
	</styles>

	<PopupCustomLayout class="PopupPanel Hidden RequirementsNotMetPopup" popupbackground="dim" oncancel="UIPopupButtonClicked()">

		<Panel id="MainContents">

			<Label class="PopupTitle" text="#DOTA_CoachesChallenge_RequirementsNotMetHeader" />
			
			<Label class="PopupSubtitle" text="#DOTA_CoachesChallenge_RequirementsNotMet" />

			<Panel class="RequirementsContainer">
				<Panel id="CoachRequirement1" class="CoachRequirement">
					<Panel class="CoachRequirementIcon" />
					<Label text="#DOTA_CoachesChallenge_Requirements_BehaviorScore" />
				</Panel>
				<Panel id="CoachRequirement2" class="CoachRequirement">
					<Panel class="CoachRequirementIcon" />
					<Label text="#DOTA_CoachesChallenge_Requirements_MMR" />
				</Panel>
				<Panel id="CoachRequirement3" class="CoachRequirement">
					<Panel class="CoachRequirementIcon" />
					<Label text="#DOTA_CoachesChallenge_Requirements_GamesPlayed" />
				</Panel>
			</Panel>

			<Panel class="FillHeight" />

			<Panel class="PopupButtonRow">
				<TextButton class="PopupButton" text="OK" onactivate="UIPopupButtonClicked()" />
			</Panel>
		</Panel>
	
	</PopupCustomLayout>
</root>
