<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_confirm_unlock_dota_plus_chat_wheel.vcss_c" />
	</styles>

	<PopupGiftDedication class="PopupPanel Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked( DOTAConfirmUnlockDotaPlusChatWheel( false ) )">
		<Label class="PopupTitle" text="#DOTA_PlusStore_ConfirmChatWheelPurchase_Title" />

		<Label id="MessageLabel" text="#DOTA_PlusStore_ConfirmChatWheelPurchase_Message" html="true" />
		
		<Panel class="PopupButtonRow">
			<Button class="PopupButton" onactivate="UIPopupButtonClicked( DOTAConfirmUnlockDotaPlusChatWheel( true ) )">
				<Label text="#DOTA_PlusStore_ConfirmChatWheelPurchase_Unlock" />
			</Button>
			<Button class="PopupButton" onactivate="UIPopupButtonClicked( DOTAConfirmUnlockDotaPlusChatWheel( false ) )">
				<Label text="#DOTA_Cancel" />
			</Button>
		</Panel>

		<Label id="FinePrint" text="#DOTA_ChatWheelPurchase_Tooltip" html="true" />
		
	</PopupGiftDedication>
</root>
