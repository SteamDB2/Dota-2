<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_hero_picker.vcss_c" />
	</styles>

  <DOTAHeroPickerPopup>

    <DOTAUIHeroPicker id="HeroPicker" double-click-to-select="true" />

    <Panel class="ButtonContainer PopupButtonRow"> 
      <Button class="PopupButton" id="PickerButtonOK" onactivate="UIPopupHeroPickerSelectHero()">
        <Label text="#DOTA_Ok" />
      </Button>
      <Button class="PopupButton" onactivate="UIPopupHeroPickerCancel()" >
        <Label text="#DOTA_Cancel" />
      </Button>
    </Panel>
    
  </DOTAHeroPickerPopup>
</root>
