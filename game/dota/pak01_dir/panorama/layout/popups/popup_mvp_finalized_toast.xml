<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard.vcss_c" />
		<include src="s2r://panorama/styles/battle_pass/current_battle_pass.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_mvp_finalized_toast.vcss_c" />
	</styles>

	<snippets>
		<snippet name="MVPInfoContainer">
			<Panel class="MVPInfoContainer">
				<DOTAHeroImage id="HeroImage" />
				<Panel id="PlayerAndHeroNameContainer">
					<Label id="PlayerName" text="{s:mvp_player_name}" />
					<Label id="HeroName" text="{s:mvp_hero_name}" />
				</Panel>
			</Panel>
		</snippet>
	</snippets>
	
	<Panel class="MVPToastPanel">
		<Panel id="HeaderContainer">
			<Panel id="MVPIcon" />
			<Panel id="MVPInfo">
				<Label id="MVPInfoSub" text="#DOTA_Profile_Last_Match" />
				<Label id="MVPInfoLabel" text="{s:mvp_title_text}" />
			</Panel>
		</Panel>
		<Label id="NoWinnerLabel" text="#DOTAMVPVote_NoWinnerDecided" />
	</Panel>
</root>

