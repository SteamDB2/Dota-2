<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_trade_request.vcss_c" />
	</styles>

	<PopupTradeRequest class="PopupPanel Hidden" popupbackground="dim">
		<Label class="PopupTitle" text="#DOTA_Trading_UI_Header_Incoming" />

		<Panel class="TradeRequestSender">
			<DOTAAvatarImage id="TradeRequestSenderAvatar" />
			<Panel class="TradeRequestSenderDetails">
				<DOTAUserName id="TradeRequestSenderName" />
				<Label id="TradeRequestRelationship" />
			</Panel>
		</Panel>
		
		<Panel class="PopupButtonRow">
			<Button id="AcceptButton" class="PopupButton">
				<Label text="#DOTA_Accept" />
			</Button>
			<Button id="DeclineButton" class="PopupButton">
				<Label text="#DOTA_Decline" />
			</Button>
		</Panel>
	</PopupTradeRequest>
</root>
