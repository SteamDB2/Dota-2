<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_ui_autograph_reward.vcss_c" />
	</styles>

	<DOTAPopupAutographReward class="PopupPanel Hidden TopBottomFlow" defaultfocus="BadgeID" popupbackground="dim" oncancel="UIPopupButtonClicked()">
		<Label class="Title" text="Please enter your 16-digit Badge ID or scan your badge"/>
		<TextEntry id="BadgeID"/>
		<Panel class="LeftRightFlow HorizontalCenter">
			<TextButton class="PopupButton" text="#OK" onactivate="PopupAutographRewardOK()"/>
		</Panel>
	</DOTAPopupAutographReward>

</root>
