<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/splash_ads/popup_dueling_fates_bundle.vcss_c" />
	</styles>

	<Popup class="PopupPanel Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()">

		<Panel class="Contents">

			<Panel id="TitleBox">
				<Label id="Title" text="#FrontPage_Emblems_Dueling_Fates_Name" />
				<Label id="SubTitle" text="#DOTA_NowAvailable" />
			</Panel>

			<Panel id="SplashImage" onactivate="UIPopupButtonClicked( DOTAShowItemDefPage( 21142 ) )" />
			<Panel id="OnSale">
				<Label id="SalePercent" text="#Debut_DuelingFates_33Off" />
				<Label id="SaleDate" text="#Debut_DuelingFates_SaleDate" />
			</Panel>

			<Label id="Message" text="#StoreBanner_Text_Dueling_Fates_Bundle" />
			<TextButton id="DetailsButton" class="ButtonBevel" text="#DOTA_Store_ViewBundle" onactivate="UIPopupButtonClicked( DOTAShowItemDefPage( 21142 ) )" />
		</Panel>


		<Button class="CloseButton"  onactivate="UIPopupButtonClicked()" />

	</Popup>
</root>
