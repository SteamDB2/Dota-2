<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/splash_ads/popup_frostivus_2017_game_mode.vcss_c" />
	</styles>

	<Popup class="PopupPanel PopupFrostivus2017GameMode Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()">

		<Panel class="Contents">

		<Panel id="TitleBox">
			<Label id="Title" text="#FrontPage_Frostivus_2017_Game_Mode_Name" />
			<Label id="SubTitle" text="#FrontPage_Frostivus_2017_Game_Mode_SubTitle" />
		</Panel>

		<Panel id="SplashImage" onactivate="UIPopupButtonClicked( DOTAOpenPlayTab( PLAY_TAB_SECTION_CUSTOM_GAMES ) )" />
			<Label id="Message" text="#FrontPage_Frostivus_2017_Game_Mode_Desc" />
			<Panel class="LeftRightFlow CenterAlign">
				<TextButton id="DetailsButton" class="ButtonBevel" text="#FrontPage_Frostivus_2017_Play_Game_Button" onactivate="UIPopupButtonClicked( DOTAOpenPlayTab( PLAY_TAB_SECTION_CUSTOM_GAMES ) )" />
			</Panel>
		</Panel>

		<Button class="CloseButton"  onactivate="UIPopupButtonClicked()" />

	</Popup>
</root>
