<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/splash_ads/popup_international2017_io_arcana.vcss_c" />
	</styles>

	<Popup class="PopupPanel Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked() DOTATrackUserStatsEvent( DOTA_USER_STATS_EVENT_IO_ARCANA_POPUP, 0 )">
		<DOTAScenePanel id="IoArcanaScene" anti-alias="true" map="scenes/battlepass_ti7/wisp_arcana" light="hero_light" renderdeferred="true" deferredalpha="true" camera="hero_camera" hittest="true" antialias="true"  particleonly="false"/>
		<Panel id="Contents">
			<Label id="Title" text="#DOTA_TI2017_Splash_Io_Arcana" />
			<Label id="SubTitle" text="#DOTA_TI2017_Splash_Io_Arcana_Exclusive" />
			<Label id="ExclusiveInfo" html="true" text="#DOTA_TI2017_Splash_Io_Arcana_Exclusive_Info" />
		</Panel>
		<Panel id="LowerContents">
			<Label id="BattlePassLevel" text="#DOTA_TI2017_Splash_Io_Arcana_Level" />
			<Panel class="Buttons">
				<TextButton id="VideoButton" class="ButtonBevel" text="#DOTA_TI2017_Splash_Io_Arcana_View_Video" onactivate="UIPopupButtonClicked( BrowserGoToDOTAURLAnchor( international/battlepass, Io_Arcana ) ) DOTATrackUserStatsEvent( DOTA_USER_STATS_EVENT_IO_ARCANA_POPUP, 2 )" />
				<TextButton id="PurchaseBattlePassButton" class="ButtonBevel" text="#dota_ti7_purchase_preview" onactivate="UIPopupButtonClicked( DOTAShowBPInternational2017RewardsAtLevel( 245 ) ) DOTATrackUserStatsEvent( DOTA_USER_STATS_EVENT_IO_ARCANA_POPUP, 3 )" />
				<TextButton id="PurchaseLevelsButton" class="ButtonBevel" text="#DOTA_TI2017_Splash_Io_Arcana_Upgrade" onactivate="UIPopupButtonClicked( DOTAPurchaseEventLevelsAmount( EVENT_ID_INTERNATIONAL_2017, 245 ) ) DOTATrackUserStatsEvent( DOTA_USER_STATS_EVENT_IO_ARCANA_POPUP, 4 )" />
				<TextButton id="ClaimButton" class="ButtonBevel" text="#DOTA_TI2017_Splash_Io_Arcana_Claim" onactivate="UIPopupButtonClicked( DOTAShowBPInternational2017RewardsAtLevel( 245 ) ) DOTATrackUserStatsEvent( DOTA_USER_STATS_EVENT_IO_ARCANA_POPUP, 5 )" />
			</Panel>
		</Panel>

		<Button class="CloseButton"  onactivate="UIPopupButtonClicked() DOTATrackUserStatsEvent( DOTA_USER_STATS_EVENT_IO_ARCANA_POPUP, 1 )" />

	</Popup>
</root>
