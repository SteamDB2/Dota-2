<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/splash_ads/popup_october_2018_treasure.vcss_c" />
	</styles>

		<Popup class="PopupPanel Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()">

		<Panel class="Contents">

			<Panel id="Header">
				<Label id="Title" text="#FrontPage_Carmine_Cascade_Title" />
			</Panel>

			<Panel id="Main">
				<Panel id="SplashImage" />

				<Panel class="SplashImageOverlay">
					<Panel class="OverlayText">
						<Label class="OverlayHeader" text="#DOTA_SplashAd_Carmine_Cascade_Exlusive_Header" />
						<Label class="OverlayDetails" text="#DOTA_SplashAd_Carmine_Cascade_Exlusive_Text" />
					</Panel>
					<Panel class="OverlayText">
						<Panel class="PlusOverlay">
							<Panel class="PlusLogo"/>
							<Label html="true" class="OverlayHeader" text="#DOTA_SplashAd_Carmine_Cascade_Convert_Header" />
						</Panel>
						<Label html="true" class="OverlayDetails" text="#DOTA_SplashAd_Carmine_Cascade_Convert_Text" />
					</Panel>

				</Panel>

				<TextButton id="DetailsButton" class="ButtonBevel" text="#DOTA_View_Details" onactivate="UIPopupButtonClicked( DOTAShowItemDefPage( 12604 ) )" />

			</Panel>

		</Panel>
		<Button class="CloseButton"  onactivate="UIPopupButtonClicked()" />

	</Popup>
</root>
