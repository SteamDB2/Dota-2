<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/splash_ads/popup_singles_day_treasure.vcss_c" />
	</styles>

	<Popup class="PopupPanel PopupSinglesDayTreasure Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()">

		<Panel class="Contents">

		<Panel id="TitleBox">
			<Label id="Title" text="#FrontPage_Singles_Day_Treasure_Name" />
			<Label id="SubTitle" text="#DOTA_NowAvailable" />
		</Panel>

		<Panel id="SplashImage" onactivate="UIPopupButtonClicked( DOTAShowItemDefPage( 12167 ) )" />
			<Label id="Message" text="#FrontPage_Treasure_Singles_Day_Desc" />
			<Panel class="LeftRightFlow CenterAlign">
				<TextButton id="DetailsButton" class="ButtonBevel" text="#DOTA_Treasure_ViewTreasure" onactivate="UIPopupButtonClicked( DOTAShowItemDefPage( 12167 ) )" />
			</Panel>
		</Panel>

		<Button class="CloseButton"  onactivate="UIPopupButtonClicked()" />

	</Popup>
</root>
