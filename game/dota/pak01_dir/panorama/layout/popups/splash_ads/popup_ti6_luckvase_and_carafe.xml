<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/splash_ads/popup_ti6_luckvase_and_carafe.vcss_c" />
	</styles>

	<Popup class="PopupPanel PopupTI6LuckvaseAndCarafe Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()">

		<Panel class="Contents">

			<Panel id="TitleBox">
				<Label id="AutographsTitle" text="#DOTA_SplashAd_TI6_LuckvaseAndCarafe_Autographs_Title" />
				<Label id="AutographsMessage" text="#DOTA_SplashAd_TI6_LuckvaseAndCarafe_Autographs_Message" html="true" />
			</Panel>

			<Panel id="Columns">
				<Panel id="LuckvaseColumn" class="Column">
					<Label class="TreasureTitle" text="#DOTA_SplashAd_TI6_LuckvaseAndCarafe_LocklessLuckvase" />
					<Panel class="TreasureImage" />
					<TextButton class="TreasureButton ButtonBevel" text="#DOTA_View_Details" onactivate="UIPopupButtonClicked( DOTAShowItemDefPage( 11658 ) )" />
				</Panel>
				<Panel id="ColumnSpacer" />
				<Panel id="CarafeColumn" class="Column">
					<Label class="TreasureTitle" text="#DOTA_SplashAd_TI6_LuckvaseAndCarafe_TroveCarafe" />
					<Panel class="TreasureImage" />
					<TextButton class="TreasureButton ButtonBevel" text="#DOTA_View_Details" onactivate="UIPopupButtonClicked( DOTAShowItemDefPage( 11803 ) )" />
				</Panel>
			</Panel>
		</Panel>

		<Button class="CloseButton"  onactivate="UIPopupButtonClicked()" />

	</Popup>
</root>
