<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/post_game_mvp_hero.vcss_c" />
	</styles>

	<DOTAPostGameMVPVoteHero hittest="false">
		<Panel id="HeroInfoContainer">
			<Panel id="VoteAreaPanel" text="+" hittest="true" />
			<DOTAScenePanel id="HeroPanel" class="OverviewHeroRender PostGameMVP" unit="npc_dota_hero_rubick" drawbackground="1"  antialias="true" activity-modifier="PostGameIdle" particleonly="false" allowrotation="false" hittest="false" />
			<Panel id="HeroInfoContent">
				<DOTAEventLevelShield id="BPLevel" />
				<Label id="PlayerNameMVP" text="{s:player_name_mvp}" />
				<Label id="KDALabel" text="{i:mvp_kills} / {i:mvp_deaths} / {i:mvp_assists}" />
				<Label id="VoteCount" class='StatsMVP' text="#DOTAMVPVote_VoteCount" />
				<Label id="HeroName" class='StatsMVP'  text="{s:hero_name_mvp}" />
				<Label id="HeroName2" class='StatsMVP'  text="{s:hero_name_mvp}" />
			</Panel>
		</Panel>
	</DOTAPostGameMVPVoteHero>

</root>
