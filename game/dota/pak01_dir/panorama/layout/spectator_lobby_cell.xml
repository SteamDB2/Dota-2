<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/spectator_lobby_cell.vcss_c" />
	</styles>

	<DOTASpectatorLobbyCell>
		<Label class="CellTitle" text="{s:watching}" html="true" />

		<DOTALeagueImage id="LeagueImage" />

		<Panel class="GameInfo">
			<Panel class="TeamsBlock">

				<Panel id="RadiantTeam" class="TeamInfo">
					<Panel id="RadiantLogo" class="TeamLogo">
						<Panel id="RadiantDefaultLogo" class="DefaultTeamLogo" />
						<DOTAUGCImage id="RadiantUGCImage" class="TeamUGCImage" scaling="stretch-to-fit-preserve-aspect" />
					</Panel>
					<Label class="TeamName" text="{s:radiant_team_name}" />
				</Panel>

				<Label class="TeamVersus" text="#VS" />

				<Panel id="DireTeam" class="TeamInfo">
					<Panel id="DireLogo" class="TeamLogo">
						<Panel id="DireDefaultLogo" class="DefaultTeamLogo" />
						<DOTAUGCImage id="DireUGCImage" class="TeamUGCImage" scaling="stretch-to-fit-preserve-aspect" />
					</Panel>
					<Label class="TeamName" text="{s:dire_team_name}" />
				</Panel>
				
			</Panel>
			
			<Label class="GameSeries" text="#DOTA_CompendiumTeam_Game_SeriesGame" />
		</Panel>

		<Panel class="StreamInfo">
			<Label id="StreamName" text="{s:stream_name}" />
		</Panel>

		<Panel class="FillHeight" />

		<Panel class="CellFooter">
			<Panel class="CellFooterRow">
				<Label id="FriendsInLobby" />
				<Panel class="FillWidth" />
				<Label class="CellLanguage" text="{s:language}" />
			</Panel>
			<Panel class="CellFooterRow">
				<Panel class="MembersIcon" />
				<Label class="MemberCount" text="{d:member_count}/{d:max_member_count}" />
				<Panel class="FillWidth" />
				<Panel class="PasswordedIcon" />
				<DOTAAvatarImage id="LeaderAvatar" />
			</Panel>
			
		</Panel>
	</DOTASpectatorLobbyCell>

</root>
