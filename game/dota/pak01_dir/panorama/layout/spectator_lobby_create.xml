<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/spectator_lobby_create.vcss_c" />
	</styles>
		
	<DOTASpectatorLobbyCreate>

		<Label class="Title" text="#DOTA_SpectatorLobby_Create" />

		<Panel id="CreateButtons">
			<Button id="PublicButton" class="CreateLobbyButton" onactivate="DOTACreateDefaultSpectatorLobby( true )">
				<Panel class="ButtonText">
					<Label class="ButtonTitle" text="#DOTA_SpectatorLobby_Public_Title" />
					<Label class="ButtonDescription" text="#DOTA_SpectatorLobby_Public_Description" />
				</Panel>
			</Button>

			<Button id="PrivateButton" class="CreateLobbyButton" onactivate="DOTACreateDefaultSpectatorLobby( false )">
				<Panel class="ButtonText">
					<Label class="ButtonTitle" text="#DOTA_SpectatorLobby_Private_Title" />
					<Label class="ButtonDescription" text="#DOTA_SpectatorLobby_Private_Description" />
				</Panel>
			</Button>
		</Panel>

	</DOTASpectatorLobbyCreate>

</root>
