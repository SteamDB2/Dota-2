<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/tooltips/battle_pass_activities/tooltip_battle_pass_cavern_crawl.vcss_c" />
	</styles>

	<Panel>
		<Label class="Title" text="#DOTA_TI9_FrontPage_JungleExpedition_Title" />

		<Panel class="MainContents">
			<Panel class="StatsRow">
				<Panel class="SingleStat">
					<Label class="StatValue" text="{d:rooms_claimed} / {d:total_rooms}" />
					<Label class="StatLabel" text="#DOTA_BattlePass_CavernCrawlTooltip_RoomsCompleted" />
				</Panel>
				<Panel class="SingleStat">
					<Label class="StatValue" text="{d:points_earned}" />
					<Label class="StatLabel" text="#DOTA_BattlePass_CavernCrawlTooltip_BattlePointsEarned" />
				</Panel>
			</Panel>

			<Panel class="SetRewards">
				<DOTAUIEconSetPreview id="CarryReward" itemdef="21327" drawbackground="false" />
				<DOTAUIEconSetPreview id="SupportReward" itemdef="21326" drawbackground="false" />
				<DOTAUIEconSetPreview id="UtilityReward" itemdef="21328" drawbackground="false" />
			</Panel>
			<Label class="StatLabel" text="#DOTA_BattlePass_CavernCrawlTooltip_SetsEarned" />
		</Panel>

	</Panel>
</root>
