<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/tooltips/battle_pass_activities/tooltip_battle_pass_wagering.vcss_c" />
	</styles>

	<Panel>
		<Label class="Title" text="#DOTA_SeasonPass_SecondaryTabHeader_Wagering" />

		<Panel class="MainContents">
			<Panel class="TokensRow">
				<Panel class="WagerTotalIcon" />
				<Label class="TokensRemainingValue StatValue" text="{d:remaining_tokens}" />
			</Panel>
			<Label class="TokensRemainingLabel StatLabel" text="#DOTA_Compendium_Wagering_RemainingTokensLong" />
			<Label class="TokensReset ResetTime" text="#DOTA_Home_BattlePass_ResetTime" />

			<Panel class="TeamWagerTokensRow">
				<Panel class="TeamWagerTokenContainer">
					<Panel class="TeamWagerToken" />
					<Label class="TeamWagerTokenLabel" text="250" />
				</Panel>
				<Label class="TeamWagerTokenCount" text="x{i:wager_count_250}" />

				<Panel class="TeamWagerTokenContainer">
					<Panel class="TeamWagerToken" />
					<Label class="TeamWagerTokenLabel" text="500" />
				</Panel>
				<Label class="TeamWagerTokenCount" text="x{i:wager_count_500}" />

				<Panel class="TeamWagerTokenContainer">
					<Panel class="TeamWagerToken" />
					<Label class="TeamWagerTokenLabel" text="1000" />
				</Panel>
				<Label class="TeamWagerTokenCount" text="x{i:wager_count_1000}" />
			</Panel>
			<Label class="TeamWagerTokensRemainingLabel StatLabel" text="#DOTA_Compendium_Wagering_TeamBonusTokens" />
		</Panel>

	</Panel>
</root>
