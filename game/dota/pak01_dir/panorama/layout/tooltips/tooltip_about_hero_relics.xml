<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/tooltips/tooltip_about_hero_relics.vcss_c" />
	</styles>

	<DOTATooltipAboutHeroRelics>
		<Label id="Title" text="#DOTA_HeroRelics_About_Title" />
		<Label id="Description" text="#DOTA_HeroRelics_About_Description" html="true" />
		
		<Label id="HowToObtainTitle" text="#DOTA_HeroRelics_About_HowToObtain_Title" />
		<Label id="HowToObtainDescription" text="#DOTA_HeroRelics_About_HowToObtain_Description" html="true" />

		<Panel id="NormalRow" class="HowToObtainRow">
			<DOTAHeroRelicImage rarity="common" relictype="0" primaryattribute="DOTA_ATTRIBUTE_STRENGTH" empty="false" />
			<Panel class="HowToObtainRelicDetails">
				<Label class="HowToObtainRelicType" text="#DOTA_HeroRelics_About_HowToObtain_Normal" />
				<Label class="HowToObtainDescription" text="#DOTA_HeroRelics_About_HowToObtain_Normal_Description" html="true" />
			</Panel>
		</Panel>
		<Panel id="RareRow" class="HowToObtainRow">
			<DOTAHeroRelicImage rarity="rare" relictype="27" primaryattribute="DOTA_ATTRIBUTE_STRENGTH" empty="false" />
			<Panel class="HowToObtainRelicDetails">
				<Label class="HowToObtainRelicType" text="#DOTA_HeroRelics_About_HowToObtain_Rare" />
				<Label class="HowToObtainDescription" text="#DOTA_HeroRelics_About_HowToObtain_Rare_Description" html="true" />
			</Panel>
		</Panel>
		
	</DOTATooltipAboutHeroRelics>
</root>
