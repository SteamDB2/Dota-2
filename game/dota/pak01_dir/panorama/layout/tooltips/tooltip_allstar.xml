<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		
		<include src="s2r://panorama/styles/dashboard_page_shared.vcss_c" />
		<include src="s2r://panorama/styles/compendiums/compendium_styles.vcss_c" />
		<include src="s2r://panorama/styles/battle_pass/international2019/bp_international2019_shared.vcss_c" />
		<include src="s2r://panorama/styles/battle_pass/international2019/bp_international2019_eventgame.vcss_c" />
		<include src="s2r://panorama/styles/tooltips/tooltip_allstar.vcss_c" />
	</styles>

	<snippets>
		<snippet name="EventCell">
			<Panel class="PointLine">
				<Label class="PointLinePoints" text="+{d:points}"/>
				<Label class="PointLineName" text="{s:event_name}"/>
			</Panel>
		</snippet>
	</snippets>

	<DOTATooltipAllStar class="DOTATooltipAllStar">
		<Label class="HeaderLabel" text="#DOTA_AllStar2019_TooltipHeader"/>
		<Panel class="PointLine">
			<Label class="PointLinePoints" text="+{d:victory_points}"/>
			<Label class="PointLineName" text="#DOTA_AllStar2019_TooltipVictory"/>
		</Panel>
		<Panel class="PointLine">
			<Label class="PointLinePoints" text="+{d:points_per_kill}"/>
			<Label class="PointLineName" text="#DOTA_AllStar2019_PointsPerKill"/>
		</Panel>
		<Panel class="PointLine">
			<Label class="PointLinePoints" text="+{d:points_per_assist}"/>
			<Label class="PointLineName" text="#DOTA_AllStar2019_PointsPerAssist"/>
		</Panel>

		<Panel id="EventCells">
			<!-- filled in with EventCell snippet in code -->
		</Panel>
	</DOTATooltipAllStar>
</root>
