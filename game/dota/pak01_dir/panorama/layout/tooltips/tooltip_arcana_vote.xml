<root>
  <styles>
    <include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/compendiums/compendium_styles.vcss_c" />
		<include src="s2r://panorama/styles/tooltips/tooltip_arcana_vote.vcss_c" />
  </styles>

  <Panel class="ArcanaVoteContainer">
    <Panel id="ArcanaVoteTooltipHeader">
      <Panel class="HeaderTitleTop">
        <Label class="TitleLabel RoundName" text="#DOTAArcanaVote_TooltipRoundName" />
        <Label class="TitleLabel ResultTitle" text="#DOTAArcanaVote_TooltipResultsTitle" />
        <Label class="TitleLabel ActiveTitle" text="#DOTAArcanaVote_TooltipActiveTitle" />
      </Panel>
      <Panel class="HeaderTitle">
        <Label class="TitleLabel SeedTitle" text="#DOTAArcanaVote_TooltipSeedingTitle" />
        <Label class="TitleLabel HeroTitle" text="#DOTAArcanaVote_TooltipHeroTitle" />
        <Panel class="TotalVoteContainer" >
          <Label class="TitleLabel YourVoteTitle" text="#DOTAArcanaVote_TooltipYourVotes" />
          <Label class="TitleLabel VoteCount" text="#DOTAArcanaVote_TooltipTotalVotes" />
          <Label class="TitleLabel VotePercent" text="#DOTAArcanaVote_TooltipTotalVotesPercent" />
        </Panel>
      </Panel>
      <Panel class="VoteTable" >
        <Panel class="VoteRow Row0">
          <Label class="Seeding" text="#DOTAArcanaVote_TooltipSeeding0" />
          <Image id="SmallHero0Image" class="SmallHeroImage" scaling="stretch-to-fit-preserve-aspect" />
          <DOTAHeroImage class="HeroIcon" id="Hero0Icon"/>
          <Label class="HeroName" text="{g:dota_hero_name:hero_0_id}" />
          <Panel class="TotalVoteContainer" >
            <Label class="MyVoteCount" text="{d:local_vote_0_count}" />
            <Label class="VoteCount" text="#DOTAArcanaVote_TooltipVoteCount0" />
            <Label class="VotePercent" text="{s:vote_0_percent}" />
          </Panel>
        </Panel>
        <Panel class="VoteRow Row1">
          <Label class="Seeding" text="#DOTAArcanaVote_TooltipSeeding1" />
          <Image id="SmallHero1Image" class="SmallHeroImage" scaling="stretch-to-fit-preserve-aspect" />          
          <DOTAHeroImage class="HeroIcon" id="Hero1Icon"/>
          <Label class="HeroName" text="{g:dota_hero_name:hero_1_id}" />
          <Panel class="TotalVoteContainer" >
            <Label class="MyVoteCount" text="{d:local_vote_1_count}" />
            <Label class="VoteCount" text="#DOTAArcanaVote_TooltipVoteCount1" />
            <Label class="VotePercent" text="{s:vote_1_percent}" />
          </Panel>
        </Panel>
        <Panel class="Bye ByeRow1">
          <Label class="ByeLabel" text="#DOTAArcanaVote_Bye" />
          <Label class="ByeDescription" text="#DOTAArcanaVote_Bye_Description" />
        </Panel>
      </Panel>
			<Panel class="HeaderTitle CalibrationTitle">
				<Label class="TitleLabel" text="#DOTAArcanaVote_CalibrationTimeRemaining" />
			</Panel>
			<Panel class="HeaderTitle FinalsCalibrationTitle">
				<Label class="TitleLabel" text="#DOTAArcanaVote_FinalsResultsHidden" />
			</Panel>
		</Panel>
  </Panel>

</root>
