<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/tooltips/tooltip_cavern_challenge.vcss_c" />
	</styles>

	<snippets>
		
		<snippet name="CustomChallengeHero">			
			<Panel class="CustomChallengeHero" hittest="false" >
				<Image id="Image" />
				<Label class="HeroName" text="{g:dota_hero_name:hero_id}" />
			</Panel>			
		</snippet>
	
	</snippets>
	
	<DOTATooltipCavernChallenge>
		<Panel class="Header">
			<Label class="ChallengeName" text="{s:challenge_name}" />
		</Panel>
		<Panel class="CustomChallengeContainer" >
			<Panel id="CustomChallengeList">
				<!-- Filled in dynamically by code -->
			</Panel>
		</Panel>
	</DOTATooltipCavernChallenge>
</root>
