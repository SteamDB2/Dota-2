<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hud/dota_hud_killgraph.vcss_c" />
	</styles>
	<Panel class="KillgraphTooltip" >
		<Panel id="Numbers" class="TopBottomFlow">
			<Label id="Timestamp" class="Value" text="{s:timestamp}" />
			<Label id="Health" class="Value" text="{d:value} HP"/>
			<Label id="AttackerName" class="Value" text="{s:attacker_name}"/>
			<Label id="AbilityName" class="Value" text="{s:ability_name}"/>
			<Label id="PhysicalDamage" class="Value PhysicalDamageLabel" text="#DOTA_KillGraph_Physical_Damage"/>
			<Label id="MagicalDamage" class="Value MagicalDamageLabel" text="#DOTA_KillGraph_Magical_Damage"/>
			<Label id="PureDamage" class="Value PureDamageLabel" text="#DOTA_KillGraph_Pure_Damage"/>
			<Label id="RemovalDamage" class="Value" text="#DOTA_KillGraph_Removal_Damage"/>
		</Panel>
		<DOTAAbilityImage id="Ability" showtooltip="true" />
		<DOTAHeroImage id="Hero" scaling="stretch-to-fit-preserve-aspect"/>
	</Panel>
</root>
