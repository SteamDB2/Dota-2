<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/graph_personalstat.vcss_c"/>
		<include src="s2r://panorama/styles/tooltips/tooltip_graph_personalstat.vcss_c" />
	</styles>

	<snippets>

		<snippet name="PlayerRow">
			<Panel class="LeftRightFlow Row Personal PersonalTooltipBackground">
				<Panel class="ColorBar PlayerStatLineColor"/>
				<Label class="StatValue" text="{d:stat_value}"/>
				<Label class="PersonalLabel" text="#DOTA_PostGame_You"/>
			</Panel>
		</snippet>
		<snippet name="GlobalRow">
			<Panel class="LeftRightFlow Row Global GlobalTooltipBackground">
				<Panel class="ColorBar GlobalStatLineColor"/>
				<Label class="StatValue" text="{f:stat_value}"/>
				<Panel class="RankTier1TierImage RankTierImage"/>
				<Panel class="RankTier2TierImage RankTierImage"/>
				<Panel class="RankTier3TierImage RankTierImage"/>
				<Panel class="RankTier4TierImage RankTierImage" />
				<Panel class="RankTier5TierImage RankTierImage" />
				<Panel class="RankTier6TierImage RankTierImage" />
				<Panel class="RankTier7TierImage RankTierImage" />
			</Panel>
		</snippet>
	</snippets>

	<DOTATooltipGraphPersonalStat hittest="false" >
		<Panel id="GlobalBaseColor" class="GlobalColor"/>
		<Panel id="PersonalBaseColor" class="PersonalColor"/>
	</DOTATooltipGraphPersonalStat>
</root>
