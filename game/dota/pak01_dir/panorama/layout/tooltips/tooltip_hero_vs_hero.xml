<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/tooltips/tooltip_hero_vs_hero.vcss_c" />
	</styles>

	<DOTATooltipHeroVsHero class="HeroContents">

		<Panel id="HeroStatsPanel">
			<Label class="Header IsAllyStat" text="#DOTA_HeroStat_HeaderAsAlly"/>
			<Panel class="WinLossStat IsAllyStat"> 
				<Label class="StatLabel" text="#DOTA_HeroStat_Record"/>
				<Label class="StatValue" text="{s:wins_with_ally} - {s:losses_with_ally}"/>
			</Panel>
			<Panel class="WinLossStat IsAllyStat"> 
				<Label class="StatLabel" text="#DOTA_HeroStat_WinRate"/>
				<Label class="StatValue" text="{s:win_rate_with_ally}"/>
			</Panel>
			<Label class="Header IsEnemyStat" text="#DOTA_HeroStat_HeaderAsEnemy"/>
			<Panel class="WinLossStat IsEnemyStat"> 
				<Label class="StatLabel" text="#DOTA_HeroStat_Record"/>
				<Label class="StatValue" text="{s:wins_against_enemy} - {s:losses_against_enemy}"/>
			</Panel>
			<Panel class="WinLossStat IsEnemyStat"> 
				<Label class="StatLabel" text="#DOTA_HeroStat_WinRate"/>
				<Label class="StatValue" text="{s:win_rate_against_enemy}"/>
			</Panel>
		</Panel>
		
	</DOTATooltipHeroVsHero>
</root>
