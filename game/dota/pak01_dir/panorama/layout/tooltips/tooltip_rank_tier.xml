<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/tooltips/tooltip_rank_tier.vcss_c" />
	</styles>

	<DOTATooltipRankTier>
		<Panel id="Contents"  class="TopBottomFlow">
			<Label class="Title" text="#DOTA_SeasonRank_Tooltip_Title" />
			<Label class="SubTitle" text="#DOTA_SeasonRank_Tooltip_YourMedalsSubtitle" />
			
			<Panel class="CurrentMedals">
				<Panel class="CurrentMedalContainer">
					<DOTARankBadge class="RankTierImage" id="Current" />
				</Panel>
			</Panel>
			
			<Label text="#DOTA_SeasonRank_Tooltip_Text1"/>
			
			<Panel id="RankDisplays" class="LeftRightFlow">
				<Panel class="RankTier1 RankDisplayItem" ><Panel id="Rank1" class="RankTierImage"/><Label class="RankTierLabel" text="#DOTARankTierName1"/></Panel>
				<Panel class="RankTier2 RankDisplayItem" ><Panel id="Rank2" class="RankTierImage"/><Label class="RankTierLabel" text="#DOTARankTierName2"/></Panel>
				<Panel class="RankTier3 RankDisplayItem" ><Panel id="Rank3" class="RankTierImage"/><Label class="RankTierLabel" text="#DOTARankTierName3"/></Panel>
				<Panel class="RankTier4 RankDisplayItem" ><Panel id="Rank4" class="RankTierImage"/><Label class="RankTierLabel" text="#DOTARankTierName4"/></Panel>
				<Panel class="RankTier5 RankDisplayItem" ><Panel id="Rank5" class="RankTierImage"/><Label class="RankTierLabel" text="#DOTARankTierName5"/></Panel>
				<Panel class="RankTier6 RankDisplayItem" ><Panel id="Rank6" class="RankTierImage"/><Label class="RankTierLabel" text="#DOTARankTierName6"/></Panel>
				<Panel class="RankTier7 RankDisplayItem" ><Panel id="Rank7" class="RankTierImage"/><Label class="RankTierLabel" text="#DOTARankTierName7"/></Panel>
				<Panel class="RankTier8 RankDisplayItem" ><Panel id="Rank8" class="RankTierImage"/><Label class="RankTierLabel" text="#DOTARankTierName8"/></Panel>
			</Panel>

			<Label text="#DOTA_SeasonRank_Tooltip_Text2"/>

			<Label text="#DOTA_SeasonRank_Tooltip_Text4" />

			<Panel id="LeaderboardDisplay" class="LeftRightFlow">
				<Panel class="RankDisplayItem RankTier8" ><Panel class="RankTierImage"/>
					<DOTAScenePanel class="EliteFX" map="scenes/rank_divine_ambient" renderdeferred="false" rendershadows="false" camera="camera_1" hittest="false" particleonly="true" />
					<Label id="RankLeaderboard" class="RankLeaderboardLabel" text="1000" />
				</Panel>
				<Panel class="RankDisplayItem RankTier8 LeaderboardTop100" ><Panel class="RankTierImage"/>
					<DOTAScenePanel class="EliteFX" map="scenes/rank_divine_ambient" renderdeferred="false" rendershadows="false" camera="camera_1" hittest="false" particleonly="true" />
					<Label id="RankLeaderboard" class="RankLeaderboardLabel" text="100" />
				</Panel>
				<Panel class="RankDisplayItem RankTier8 LeaderboardTop10" ><Panel class="RankTierImage"/>
					<DOTAScenePanel class="EliteFX" map="scenes/rank_divine_ambient" renderdeferred="false" rendershadows="false" camera="camera_1" hittest="false" particleonly="true" />
					<Label id="RankLeaderboard" class="RankLeaderboardLabel" text="10" />
				</Panel>
				<Panel class="RankDisplayItem RankTier8 LeaderboardTop1" >
					<Panel class="RankTierImage"/>
					<DOTAScenePanel class="EliteFX" map="scenes/rank_divine_ambient" renderdeferred="false" rendershadows="false" camera="camera_1" hittest="false" particleonly="true" />
					<Label id="RankLeaderboard" class="RankLeaderboardLabel" text="1" />
				</Panel>
			</Panel>

			<Label text="#DOTA_SeasonRank_Tooltip_Text3"/>
		</Panel>
	</DOTATooltipRankTier>
</root>
