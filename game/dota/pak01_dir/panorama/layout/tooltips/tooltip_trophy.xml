<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/tooltips/tooltip_trophy.vcss_c" />
	</styles>

	<DOTATooltipTrophy class="TrophyContents">
		<Label id="TrophyName" text="#DOTA_TrophyName" />
		<Label id="TrophyCategory" text="#DOTA_TrophyCategory" />

		<Panel class="TrophySeparator ScoreSeparator" />

		<Label id="TrophyScore" />

		<Panel class="TrophySeparator" />

		<Label id="TrophyDescription" text="#DOTA_TrophyDescription" />
		
		<Panel class="TrophySeparator NextSeparator" />

		<Panel id="NextTrophy">
			<DOTATrophyImage id="NextTrophyImage" scaling="stretch-to-fit-preserve-aspect" />
			<Panel id="NextTrophyDetails">
				<Label id="NextTrophyAward" text="#DOTA_NextTrophy" />
				<Label id="NextTrophyScore" />
			</Panel>
		</Panel>
	</DOTATooltipTrophy>
</root>
