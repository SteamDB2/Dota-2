<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		
		<include src="s2r://panorama/styles/dashboard_page_shared.vcss_c" />
		<include src="s2r://panorama/styles/tooltips/tooltip_unit_bounty.vcss_c" />
	</styles>

	<DOTATooltipUnitBounty class="DOTATooltipUnitBounty">
		<Panel class="InfoRow">
			<Label class="InfoName" text="#DOTA_HUD_Tooltip_UnitBounty_Level"/>
			<Label class="InfoData" text="{d:unit_level}"/>
		</Panel>
		<Panel class="InfoRow BountyRangeRow">
			<Label class="InfoName" text="#DOTA_HUD_Tooltip_UnitBounty_GoldBounty"/>
			<Label class="InfoData" text="{d:min_gold_bounty} - {d:max_gold_bounty}"/>
		</Panel>
		<Panel class="InfoRow SameBountyRow">
			<Label class="InfoName" text="#DOTA_HUD_Tooltip_UnitBounty_GoldBounty"/>
			<Label class="InfoData" text="{d:max_gold_bounty}"/>
		</Panel>
		<Panel class="InfoRow TeamBountyRow">
			<Label class="InfoName" text="#DOTA_HUD_Tooltip_UnitBounty_TeamGoldBounty"/>
			<Label class="InfoData" text="{d:team_gold_bounty}"/>
		</Panel>
		<Panel class="InfoRow DenyBountyRow">
			<Label class="InfoName" text="#DOTA_HUD_Tooltip_UnitBounty_DenyGoldBounty"/>
			<Label class="InfoData" text="{d:deny_gold_bounty}"/>
		</Panel>
		<Panel class="InfoRow">
			<Label class="InfoName" text="#DOTA_HUD_Tooltip_UnitBounty_XPBounty"/>
			<Label class="InfoData" text="{d:xp_bounty}"/>
		</Panel>
		
	</DOTATooltipUnitBounty>
</root>
