<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/ui_ability_guide_viewer.vcss_c" />
	</styles>

  <snippets>
    <snippet name="AbilityListEntry">
      <Panel class="AbilityEntryContainer" >
        <DOTAAbilityImage id="AbilityImage" />
        <Label class="AbilityName" text="#DOTA_AbilityTooltip_Name" />
        <Label class="AbilityBuildComment" text="#DOTA_AbilityTooltip_BuildComment" html="true" />       
      </Panel>
    </snippet>

    <snippet name="TalentListEntry">
      <Panel class="AbilityEntryContainer" >
        <Panel class="TalentImage" />
        <Label class="AbilityName" text="#DOTA_HeroGuideViewer_TalentLevel" />
        <Panel class="AbilityBuildComment TopBottomFlow" >
          <Label class="TalentComment1" text="#DOTA_HeroGuideViewer_TalentComment1" html="true" />
          <Label class="TalentComment2" text="#DOTA_HeroGuideViewer_TalentComment2" html="true" />
        </Panel>
      </Panel>
    </snippet>
    
    <snippet name="ItemListTitle">
      <Panel class="ItemListTitleContainer" >
        <Label class="ItemListTitle" text="{s:category_name}" />
      </Panel>
    </snippet>
    
    <snippet name="ItemListEntry">
      <Panel class="AbilityEntryContainer" >
        <DOTAItemImage id="ItemImage" />
        <Label class="AbilityName" text="#DOTA_AbilityTooltip_Name" />
        <Label class="AbilityBuildComment" text="#DOTA_AbilityTooltip_BuildComment" html="true" />
      </Panel>
    </snippet>
  </snippets>
  
  <DOTAAbilityGuideViewer>
    <Panel id="AbilityList">
      <!-- Filled in dynamically-->
    </Panel>
  </DOTAAbilityGuideViewer>
</root>
