<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/vr/vr_friend_replays.vcss_c" />
	</styles>

	<ClientUIDialogPanel>
		<!--<HTML url="https://www.youtube.com/embed/6TtNCj7vQlE?start=230&amp;autoplay=1&amp;vq=hd1080;html5=1" style="width: 100%; height: 100%;" />-->
		<Panel class="Column">
			<Label text="Scene:" />
			<Button onactivate='DOTAVRSetScene( main )'>
				<Label text="Main" />
			</Button>
			<Button onactivate='DOTAVRSetScene( hero )'>
				<Label text="Hero" />
			</Button>
			<Button onactivate='DOTAVRSetScene()'>
				<Label text="Game" />
			</Button>
		</Panel>
		<Panel class="Column">
			<Label text="Scale:" />
			<Button onactivate="DOTAVRSetSpectateMode( 1 )">
				<Label text="Overview" />
			</Button>
			<Button onactivate="DOTAVRSetSpectateMode( 2 )">
				<Label text="Medium" />
			</Button>
			<Button onactivate="DOTAVRSetSpectateMode( 3 )">
				<Label text="Ground" />
			</Button>
		</Panel>
	</ClientUIDialogPanel>
</root>
