<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/vr/vr_hero_loadout_hero_details.vcss_c" />
	</styles>

	<DOTAVRHeroLoadoutHeroDetails class="VRMode">
		<Panel id="Contents">
			<Panel id="LeftColumn">
				<Panel id="PrimaryAttributeImage" />
			</Panel>

			<Panel id="MainColumn">
				<Label id="HeroName" text="{g:dota_hero_name:hero_id}" />

				<Panel id="HeroAbilities">

				</Panel>

				<Panel id="Loadout">
					<Label class="SectionTitle" text="#DOTA_VR_EquippedItems" />
					<Panel id="HeroSlots">

					</Panel>
				</Panel>

				<Panel id="Store">
					<Panel id="StoreHeader">
						<Label class="SectionTitle" text="#DOTA_VR_StorePreview" />
						<Panel class="FillWidth" />
						<CarouselNav id="AvailableItemsCarouselNav" carouselid="AvailableItemsCarousel" />
					</Panel>
					<DOTAStoreItemCarousel id="AvailableItemsCarousel" panels-visible="3" itemsperpage="5" />
				</Panel>
			</Panel>
		</Panel>

		<ContextMenuManager id="ContextMenuManager" />
		
	</DOTAVRHeroLoadoutHeroDetails>
</root>