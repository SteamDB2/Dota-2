<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/vr/vr_lobby_status.vcss_c" />
	</styles>

	<DOTAVRLobbyStatus>
		<Panel id="MembersColumn" class="StatusColumn">
			<Label class="Title" text="#DOTA_VR_LobbyLeader" />
			<DOTAProfileCard id="LeaderProfileCard" />

			<Label class="SubTitle" text="#DOTA_VR_LobbyMembers" />
			<Panel id="LobbyMembersContainer">
				<Panel id="LobbyMembers" />
			</Panel>
		</Panel>
		<Panel id="DetailsColumn" class="StatusColumn">
			<Label id="PrivateLobbyTitle" class="Title" text="#DOTA_VR_PrivateLobby" />
			<Label id="PublicLobbyTitle" class="Title" text="#DOTA_VR_PublicLobby" />
			<DOTASpectatorLobbyCell id="LobbyCell" />
			<Panel id="LobbyPassword">
				<Label id="LobbyPasswordLabel" text="#DOTA_VR_LobbyPassword" />
				<Label id="LobbyPasswordValue" class="MonoNumbersFont" text="{s:lobby_password}" />
			</Panel>
		</Panel>
	</DOTAVRLobbyStatus>
</root>