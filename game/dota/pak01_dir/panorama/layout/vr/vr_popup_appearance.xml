<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/vr/vr_popup_appearance.vcss_c" />
	</styles>

	<snippets>
		<snippet name="HatPanelLayout">
			<Panel class="HatPanel">
				<Image id="HatImage" />
			</Panel>
		</snippet>
	</snippets>

	<DOTAVRPopupAppearance class="PopupPanel Hidden">
		<Panel id="HatContainer">
			<Label id="HatTitle" text="#DOTA_VR_SelectAppearance" />
			<Panel id="HatList" />
		</Panel>
		<Panel class="PopupButtonRow">
			<TextButton class="PopupButton" text="#DOTA_Cancel" onactivate="UIPopupButtonClicked()" />
		</Panel>
	</DOTAVRPopupAppearance>
</root>
