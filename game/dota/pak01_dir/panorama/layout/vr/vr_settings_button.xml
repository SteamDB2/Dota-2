<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/vr/vr_settings_button.vcss_c" />
	</styles>

	<DOTAVRSettingsButton>
		<Button onactivate='DOTAVRShowSettingsPopup()' >
		    <Panel class="ButtonContents">
		        <Panel id="AudioIcon" />
			    <Label text="#DOTA_VR_AudioSettings" />
			</Panel>
		</Button>
		<Panel id="VoiceStatusContainer" >
		    <Label id="VoiceHint" text="{s:voice_hint}" />
		    <Panel id="SelfVoice" />
		</Panel>
	</DOTAVRSettingsButton>
</root>