<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/vr/vr_trackpad_left.vcss_c" />
	</styles>

	<DOTAVRTrackpadLeft>
		<Panel id="MenuRow">
			<Label id="LobbyHint" class="OnlyInGame" text="#DOTA_VR_Controls_BackToLobby" />
			<Panel id="LobbyIcon" class="OnlyInGame RightSide" />
			<Label id="HatHint" class="OnlyCommandRoom" text="#DOTA_VR_Controls_Appearance" />
			<Panel id="HatIcon" class="OnlyCommandRoom" />
		</Panel>
		<Panel id="TrackpadRow">
			<Label id="ScaleHint" class="OnlyInGame LeftSide" text="#DOTA_VR_Controls_Scale" />
			<Panel id="Trackpad" class="RightSide" >
				<Panel id="TouchPoint" />
				<Panel id="ZoomIcons" class="OnlyInGame" >
					<Panel id="ZoomOut" />
					<Panel id="ZoomIn" />
				</Panel>
			</Panel>
		</Panel>
	</DOTAVRTrackpadLeft>
</root>
