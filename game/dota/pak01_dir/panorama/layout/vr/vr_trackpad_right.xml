<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/vr/vr_trackpad_right.vcss_c" />
	</styles>

	<DOTAVRTrackpadRight>
		<Panel id="MenuRow">
			<Label id="DirectedCamHint" class="OnlyInGame" text="#DOTA_VR_Controls_DirectedCamera" />
			<Panel id="DirectedCamIcon" class="OnlyInGame" />
			<Label id="RecenterCamera" class="OnlyNotInGame" text="#DOTA_VR_Controls_Recenter" />
			<Panel id="HatIcon" class="OnlyNotInGame" />
		</Panel>
		<Panel id="TrackpadRow">
			<Label id="TeleportHint" text="#DOTA_VR_Controls_Teleport" />
			<Panel id="Trackpad" class="LeftSide" >
				<Panel id="TouchPoint" />
				<Panel id="TeleportArrow" />
			</Panel>
		</Panel>
	</DOTAVRTrackpadRight>
</root>
