<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/weekendtourney_status.vcss_c" />
	</styles>

	<WeekendTourneyStatusPanel>
		<Panel id="NotInTourney">
			<Label id="NoTournamentScheduledLabel" text="#WeekendTourneyStatus_NoTournamentScheduled" html="true"/>
			<Label id="StartingLaterLabel" text="#WeekendTourneyStatus_StartingLater" html="true"/>
			<Label id="StartingSoonLabel" text="#WeekendTourneyStatus_StartingSoon" html="true"/>
			<Panel id="FrontPageStartingSoon">
				<Label id="FrontPageStartingSoonHeader" text="#WeekendTourneyStatus_StartingSoonFrontPageHeader" html="true"/>
				<Label id="FrontPageStartingSoonTimeUntil" text="{s:weekendtourney_duration_until_window_open}" html="true"/>
			</Panel>
			<Panel id="FrontPageStartingLater">
				<Label id="FrontPageStartingLaterHeader" text="#WeekendTourneyStatus_StartingLaterFrontPageHeader" html="true"/>
				<Label id="FrontPageStartingLaterDate" text="{t:s:t:m:weekendtourney_time_window_open}" html="true"/>
			</Panel>
			<Label id="NowOpenLabel" text="#WeekendTourneyStatus_Open" html="true"/>
			<Panel id="FrontPageNowOpen">
				<Label id="FrontPageNowOpenHeader" text="#WeekendTourneyStatus_OpenFrontPageHeader" html="true"/>
				<Label id="FrontPageNowOpenTimeUntil" text="{s:weekendtourney_duration_until_window_close}" html="true"/>
			</Panel>
			<Label id="OpenRateLimitedLabel" text="#WeekendTourneyStatus_OpenRateLimited" html="true"/>
			<Label id="TooLateLabel" text="#WeekendTourneyStatus_TooLate" html="true"/>
			<!--
			<Button class="BlueButton" onactivate="DOTAPlayPanelCloseButtonClicked(true); DOTAShowWeekendTourneyPage();" >
				<Label text="#DOTA_Plus_LearnMore" />
			</Button>
			-->
		</Panel>
	</WeekendTourneyStatusPanel>
</root>
